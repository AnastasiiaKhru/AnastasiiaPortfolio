@model AnastasiiaPortfolio.Models.Project

@{
    ViewData["Title"] = "Delete Project";
}

<div class="container">
    <h1 class="my-4">Delete Project</h1>

    <div class="alert alert-danger">
        <h3>Are you sure you want to delete this project?</h3>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">@Model.Title</h5>
                    <p class="card-text">@Model.Description</p>
                    <img src="@Model.ImageUrl" class="img-fluid mb-3" alt="@Model.Title">
                    <p class="card-text">
                        <strong>Project URL:</strong> <a href="@Model.ProjectUrl" target="_blank">@Model.ProjectUrl</a>
                    </p>
                    <p class="card-text">
                        <strong>Created:</strong> @Model.CreatedAt.ToString("MMMM dd, yyyy")
                    </p>
                </div>
            </div>

            <form asp-action="Delete" class="mt-4">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Delete" class="btn btn-danger" />
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </form>
        </div>
    </div>
</div> 