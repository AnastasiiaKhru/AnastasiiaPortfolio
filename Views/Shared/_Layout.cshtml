@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@{
    var action = ViewContext.RouteData.Values["action"]?.ToString() ?? "";
    var controller = ViewContext.RouteData.Values["controller"]?.ToString() ?? "";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Anastasiia Khrustaleva — Full-stack developer portfolio. Skills, projects, experience, and contact." />
    <title>@ViewData["Title"] - Anastasiia Portfolio</title>
    @{
        var baseUrl = $"{Context.Request.Scheme}://{Context.Request.Host}";
        var ogTitle = ViewData["OgTitle"] as string ?? $"{ViewData["Title"]} - Anastasiia Portfolio";
        var ogDescription = ViewData["OgDescription"] as string ?? "Anastasiia Khrustaleva — Full-stack developer portfolio. Skills, projects, experience, and contact.";
        var ogImage = ViewData["OgImage"] as string ?? $"{baseUrl}{Url.Content("~/images/og-image.png")}";
        var ogUrl = $"{baseUrl}{Context.Request.Path}{Context.Request.QueryString}";
    }
    <meta property="og:title" content="@ogTitle" />
    <meta property="og:description" content="@ogDescription" />
    <meta property="og:image" content="@ogImage" />
    <meta property="og:url" content="@ogUrl" />
    <meta property="og:type" content="website" />
    <meta name="twitter:card" content="summary_large_image" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:ital,wght@0,400;0,500;0,600;0,700;1,400&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AnastasiiaPortfolio.styles.css" asp-append-version="true" />
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg">
            <div class="container navbar-container">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <a class="navbar-brand navbar-brand-center" href="/">
                    <img src="~/images/logo-ak.png" alt="AK" class="navbar-logo" />
                </a>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link @(controller == "Home" && (action == "Index" || string.IsNullOrEmpty(action)) ? "active" : "")" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(controller == "Home" && action == "Projects" ? "active" : "")" asp-controller="Home" asp-action="Projects">Projects</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(controller == "Home" && action == "Skills" ? "active" : "")" asp-controller="Home" asp-action="Skills">Skills</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(controller == "Home" && action == "Experience" ? "active" : "")" asp-controller="Home" asp-action="Experience">Experience</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(controller == "Home" && action == "Education" ? "active" : "")" asp-controller="Home" asp-action="Education">Education</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link @(controller == "PlayZone" ? "active" : "")" asp-controller="PlayZone" asp-action="Index">PlayZone</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(controller == "Rate" ? "active" : "")" asp-controller="Rate" asp-action="Index">Reviews</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(controller == "Home" && action == "Contact" ? "active" : "")" asp-controller="Home" asp-action="Contact">Contact</a>
                        </li>
                        <partial name="_LoginPartial" />
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main role="main" class="pb-3">
        @RenderBody()
    </main>

    <footer class="site-footer">
        <div class="container">
            <div class="footer-content">
                <div class="footer-socials">
                    <a href="https://www.linkedin.com/in/anastasiia-khrustaleva-29a180100/" target="_blank" rel="noopener" title="LinkedIn" class="social-icon"><i class="fab fa-linkedin-in"></i></a>
                    <a href="https://github.com/AnastasiiaKhru" target="_blank" rel="noopener" title="GitHub" class="social-icon"><i class="fab fa-github"></i></a>
                </div>
                <div class="footer-copyright">&copy; @DateTime.Now.Year Anastasiia Khrustaleva. All Rights Reserved.</div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            window.addEventListener('scroll', () => {
                const navbar = document.querySelector('.navbar');
                if (navbar) {
                    if (window.scrollY > 50) navbar.classList.add('navbar-scrolled');
                    else navbar.classList.remove('navbar-scrolled');
                }
            });

            document.querySelectorAll('.navbar .nav-link').forEach(link => {
                link.addEventListener('click', () => {
                    const collapse = document.querySelector('.navbar-collapse');
                    if (collapse && collapse.classList.contains('show')) {
                        const bs = bootstrap.Collapse.getInstance(collapse) || new bootstrap.Collapse(collapse);
                        bs.hide();
                    }
                });
            });
        });
    </script>
</body>
</html>
