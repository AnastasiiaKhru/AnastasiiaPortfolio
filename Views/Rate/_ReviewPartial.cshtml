@model AnastasiiaPortfolio.Models.Review

<div class="card mb-4 shadow-sm">
    <div class="card-body">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <div>
                <h5 class="card-title mb-1">@Model.Name</h5>
                <small class="text-muted">@Model.CreatedAt.ToString("MMMM d, yyyy 'at' h:mm tt")</small>
            </div>
            <div class="rating-stars">
                @for (int i = 1; i <= 5; i++)
                {
                    <i class="fas fa-star @(i <= Model.Rating ? "text-warning" : "text-muted")"></i>
                }
            </div>
        </div>
        <p class="card-text">@Model.Comment</p>
    </div>
</div> 