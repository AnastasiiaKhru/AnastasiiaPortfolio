@{
    ViewData["Title"] = "PlayZone";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>PlayZone - Game Arcade | Anastasiia Portfolio</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;500;600;700;800&family=Orbitron:wght@400;500;600;700;800;900&display=swap" rel="stylesheet">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        html, body {
            min-height: 100vh;
            font-family: 'Plus Jakarta Sans', system-ui, sans-serif;
            background: #050508;
            color: #f1f5f9;
            overflow-x: hidden;
        }

        /* Animated background */
        .bg-animation {
            position: fixed;
            inset: 0;
            z-index: 0;
            overflow: hidden;
        }

        .bg-animation::before {
            content: '';
            position: absolute;
            width: 200%;
            height: 200%;
            top: -50%;
            left: -50%;
            background: 
                radial-gradient(circle at 20% 80%, rgba(0, 212, 255, 0.08) 0%, transparent 40%),
                radial-gradient(circle at 80% 20%, rgba(168, 85, 247, 0.08) 0%, transparent 40%),
                radial-gradient(circle at 50% 50%, rgba(0, 255, 136, 0.05) 0%, transparent 50%);
            animation: bgRotate 30s linear infinite;
        }

        @@keyframes bgRotate {
            from { transform: rotate(0deg); }
            to { transform: rotate(360deg); }
        }

        /* Grid pattern overlay */
        .grid-overlay {
            position: fixed;
            inset: 0;
            z-index: 1;
            background-image: 
                linear-gradient(rgba(0, 212, 255, 0.03) 1px, transparent 1px),
                linear-gradient(90deg, rgba(0, 212, 255, 0.03) 1px, transparent 1px);
            background-size: 50px 50px;
            pointer-events: none;
        }

        /* Main container */
        .playzone-select {
            position: relative;
            z-index: 10;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        /* Header */
        .playzone-header {
            text-align: center;
            padding: 3rem 1.5rem 2rem;
        }

        .playzone-logo {
            font-family: 'Orbitron', sans-serif;
            font-size: clamp(2.5rem, 8vw, 4.5rem);
            font-weight: 900;
            letter-spacing: 0.05em;
            background: linear-gradient(135deg, #00d4ff 0%, #a855f7 50%, #00ff88 100%);
            background-size: 200% 200%;
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            animation: gradientShift 4s ease infinite;
            text-shadow: 0 0 60px rgba(0, 212, 255, 0.3);
            margin-bottom: 0.5rem;
        }

        @@keyframes gradientShift {
            0%, 100% { background-position: 0% 50%; }
            50% { background-position: 100% 50%; }
        }

        .playzone-subtitle {
            font-size: 1.1rem;
            color: #64748b;
            font-weight: 500;
            letter-spacing: 0.1em;
            text-transform: uppercase;
        }

        /* Games container */
        .games-container {
            flex: 1;
            display: flex;
            flex-direction: column;
            gap: 1.5rem;
            padding: 1rem 1.5rem 3rem;
            max-width: 1400px;
            margin: 0 auto;
            width: 100%;
        }

        @@media (min-width: 900px) {
            .games-container {
                flex-direction: row;
                padding: 2rem;
                gap: 2rem;
            }
        }

        /* Game card */
        .game-card {
            flex: 1;
            position: relative;
            background: linear-gradient(165deg, rgba(15, 20, 35, 0.9), rgba(5, 8, 18, 0.95));
            border-radius: 1.5rem;
            overflow: hidden;
            border: 1px solid rgba(255, 255, 255, 0.08);
            transition: all 0.4s cubic-bezier(0.16, 1, 0.3, 1);
            cursor: pointer;
            text-decoration: none;
            display: flex;
            flex-direction: column;
        }

        .game-card:hover {
            transform: translateY(-8px) scale(1.02);
            border-color: rgba(0, 212, 255, 0.3);
            box-shadow: 
                0 30px 80px rgba(0, 0, 0, 0.5),
                0 0 60px rgba(0, 212, 255, 0.15);
        }

        .game-card--snake:hover {
            border-color: rgba(0, 255, 136, 0.4);
            box-shadow: 
                0 30px 80px rgba(0, 0, 0, 0.5),
                0 0 60px rgba(0, 255, 136, 0.2);
        }

        .game-card--maze:hover {
            border-color: rgba(168, 85, 247, 0.4);
            box-shadow: 
                0 30px 80px rgba(0, 0, 0, 0.5),
                0 0 60px rgba(168, 85, 247, 0.2);
        }

        /* Card preview area */
        .game-preview {
            position: relative;
            height: 220px;
            overflow: hidden;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        @@media (min-width: 900px) {
            .game-preview {
                height: 280px;
            }
        }

        /* Snake preview */
        .snake-preview {
            background: linear-gradient(180deg, #0a1a0a 0%, #051505 100%);
        }

        .snake-grid {
            position: absolute;
            inset: 0;
            background-image: 
                linear-gradient(rgba(0, 255, 136, 0.08) 1px, transparent 1px),
                linear-gradient(90deg, rgba(0, 255, 136, 0.08) 1px, transparent 1px);
            background-size: 20px 20px;
        }

        .snake-body {
            display: flex;
            gap: 4px;
            transform: rotate(-15deg);
        }

        .snake-segment {
            width: 28px;
            height: 28px;
            background: linear-gradient(135deg, #00ff88, #00cc6a);
            border-radius: 6px;
            box-shadow: 0 0 20px rgba(0, 255, 136, 0.5);
            animation: snakeMove 2s ease-in-out infinite;
        }

        .snake-segment:nth-child(1) { animation-delay: 0s; }
        .snake-segment:nth-child(2) { animation-delay: 0.1s; }
        .snake-segment:nth-child(3) { animation-delay: 0.2s; }
        .snake-segment:nth-child(4) { animation-delay: 0.3s; }
        .snake-segment:nth-child(5) { animation-delay: 0.4s; }
        .snake-segment:nth-child(6) { animation-delay: 0.5s; }

        .snake-segment.head {
            width: 32px;
            height: 32px;
            border-radius: 50%;
            position: relative;
        }

        .snake-segment.head::before,
        .snake-segment.head::after {
            content: '';
            position: absolute;
            width: 8px;
            height: 8px;
            background: white;
            border-radius: 50%;
            top: 6px;
        }

        .snake-segment.head::before { left: 5px; }
        .snake-segment.head::after { right: 5px; }

        .snake-food {
            position: absolute;
            width: 24px;
            height: 24px;
            background: radial-gradient(circle at 30% 30%, #ff6b6b, #cc0000);
            border-radius: 50%;
            right: 25%;
            top: 30%;
            box-shadow: 0 0 25px rgba(255, 0, 0, 0.5);
            animation: foodPulse 1.5s ease-in-out infinite;
        }

        @@keyframes snakeMove {
            0%, 100% { transform: translateY(0); }
            50% { transform: translateY(-5px); }
        }

        @@keyframes foodPulse {
            0%, 100% { transform: scale(1); opacity: 1; }
            50% { transform: scale(1.15); opacity: 0.8; }
        }

        /* Maze preview */
        .maze-preview {
            background: linear-gradient(180deg, #0a0a1a 0%, #05050f 100%);
            perspective: 800px;
        }

        .maze-3d {
            width: 200px;
            height: 200px;
            transform: rotateX(60deg) rotateZ(45deg);
            position: relative;
        }

        .maze-wall {
            position: absolute;
            background: linear-gradient(180deg, rgba(168, 85, 247, 0.3), rgba(0, 212, 255, 0.2));
            border: 1px solid rgba(168, 85, 247, 0.5);
            box-shadow: 0 0 15px rgba(168, 85, 247, 0.3);
        }

        .maze-wall.h { width: 40px; height: 6px; }
        .maze-wall.v { width: 6px; height: 40px; }

        .maze-wall:nth-child(1) { top: 0; left: 0; }
        .maze-wall:nth-child(2) { top: 0; left: 50px; }
        .maze-wall:nth-child(3) { top: 0; left: 100px; }
        .maze-wall:nth-child(4) { top: 40px; left: 30px; }
        .maze-wall:nth-child(5) { top: 40px; left: 80px; }
        .maze-wall:nth-child(6) { top: 80px; left: 0; }
        .maze-wall:nth-child(7) { top: 80px; left: 60px; }
        .maze-wall:nth-child(8) { top: 120px; left: 20px; }
        .maze-wall:nth-child(9) { top: 120px; left: 90px; }

        .maze-player {
            position: absolute;
            width: 16px;
            height: 16px;
            background: #00d4ff;
            border-radius: 50%;
            bottom: 20px;
            left: 20px;
            box-shadow: 0 0 20px #00d4ff;
            animation: mazeGlow 2s ease-in-out infinite;
        }

        .maze-goal {
            position: absolute;
            width: 16px;
            height: 16px;
            background: #00ff88;
            border-radius: 50%;
            top: 15px;
            right: 15px;
            box-shadow: 0 0 25px #00ff88;
            animation: goalPulse 1.5s ease-in-out infinite;
        }

        @@keyframes mazeGlow {
            0%, 100% { box-shadow: 0 0 20px #00d4ff; }
            50% { box-shadow: 0 0 35px #00d4ff, 0 0 50px rgba(0, 212, 255, 0.3); }
        }

        @@keyframes goalPulse {
            0%, 100% { transform: scale(1); box-shadow: 0 0 25px #00ff88; }
            50% { transform: scale(1.2); box-shadow: 0 0 40px #00ff88; }
        }

        /* Card content */
        .game-content {
            padding: 1.5rem;
            flex: 1;
            display: flex;
            flex-direction: column;
        }

        .game-badge {
            display: inline-flex;
            align-items: center;
            gap: 0.4rem;
            padding: 0.4rem 0.8rem;
            background: rgba(255, 255, 255, 0.05);
            border-radius: 2rem;
            font-size: 0.75rem;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.05em;
            margin-bottom: 1rem;
            width: fit-content;
        }

        .game-card--snake .game-badge {
            color: #00ff88;
            border: 1px solid rgba(0, 255, 136, 0.3);
        }

        .game-card--maze .game-badge {
            color: #a855f7;
            border: 1px solid rgba(168, 85, 247, 0.3);
        }

        .game-title {
            font-family: 'Orbitron', sans-serif;
            font-size: 1.8rem;
            font-weight: 700;
            margin-bottom: 0.75rem;
        }

        .game-card--snake .game-title {
            color: #00ff88;
        }

        .game-card--maze .game-title {
            color: #a855f7;
        }

        .game-description {
            color: #94a3b8;
            font-size: 0.95rem;
            line-height: 1.6;
            margin-bottom: 1.25rem;
        }

        /* Rules */
        .game-rules {
            margin-bottom: 1.5rem;
        }

        .game-rules h4 {
            font-size: 0.8rem;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.1em;
            color: #64748b;
            margin-bottom: 0.75rem;
        }

        .game-rules ul {
            list-style: none;
            display: flex;
            flex-direction: column;
            gap: 0.5rem;
        }

        .game-rules li {
            display: flex;
            align-items: flex-start;
            gap: 0.6rem;
            font-size: 0.9rem;
            color: #cbd5e1;
        }

        .game-rules li i {
            margin-top: 0.2rem;
            font-size: 0.7rem;
        }

        .game-card--snake .game-rules li i { color: #00ff88; }
        .game-card--maze .game-rules li i { color: #a855f7; }

        /* Controls */
        .game-controls {
            display: flex;
            flex-wrap: wrap;
            gap: 0.5rem;
            margin-bottom: 1.5rem;
        }

        .control-tag {
            display: flex;
            align-items: center;
            gap: 0.3rem;
            padding: 0.35rem 0.7rem;
            background: rgba(255, 255, 255, 0.05);
            border-radius: 0.4rem;
            font-size: 0.8rem;
            color: #94a3b8;
        }

        .control-tag kbd {
            background: rgba(0, 212, 255, 0.15);
            padding: 0.15rem 0.4rem;
            border-radius: 0.25rem;
            font-family: 'Consolas', monospace;
            font-size: 0.75rem;
            color: #00d4ff;
        }

        /* Play button */
        .play-btn {
            margin-top: auto;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 0.75rem;
            padding: 1rem 2rem;
            border-radius: 0.75rem;
            font-family: 'Orbitron', sans-serif;
            font-size: 1rem;
            font-weight: 700;
            text-transform: uppercase;
            letter-spacing: 0.1em;
            border: none;
            cursor: pointer;
            transition: all 0.3s;
        }

        .game-card--snake .play-btn {
            background: linear-gradient(135deg, #00ff88, #00cc6a);
            color: #050508;
            box-shadow: 0 4px 20px rgba(0, 255, 136, 0.3);
        }

        .game-card--snake:hover .play-btn {
            box-shadow: 0 8px 30px rgba(0, 255, 136, 0.5);
            transform: translateY(-2px);
        }

        .game-card--maze .play-btn {
            background: linear-gradient(135deg, #a855f7, #7c3aed);
            color: #fff;
            box-shadow: 0 4px 20px rgba(168, 85, 247, 0.3);
        }

        .game-card--maze:hover .play-btn {
            box-shadow: 0 8px 30px rgba(168, 85, 247, 0.5);
            transform: translateY(-2px);
        }

        /* Back link */
        .back-link {
            position: fixed;
            top: 1rem;
            left: 1rem;
            z-index: 100;
            display: flex;
            align-items: center;
            gap: 0.5rem;
            padding: 0.6rem 1rem;
            background: rgba(5, 5, 8, 0.8);
            backdrop-filter: blur(12px);
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 0.5rem;
            color: #94a3b8;
            text-decoration: none;
            font-size: 0.85rem;
            transition: all 0.2s;
        }

        .back-link:hover {
            color: #f1f5f9;
            border-color: rgba(0, 212, 255, 0.3);
        }

        /* Footer */
        .playzone-footer {
            text-align: center;
            padding: 1.5rem;
            color: #475569;
            font-size: 0.85rem;
        }

        .playzone-footer a {
            color: #00d4ff;
            text-decoration: none;
        }

        .playzone-footer a:hover {
            text-decoration: underline;
        }
    </style>
</head>
<body>

<div class="bg-animation"></div>
<div class="grid-overlay"></div>

<a href="/" class="back-link">
    <i class="fas fa-arrow-left"></i>
    Back to Portfolio
</a>

<div class="playzone-select">
    <header class="playzone-header">
        <h1 class="playzone-logo">PlayZone</h1>
        <p class="playzone-subtitle">Game Arcade</p>
    </header>

    <main class="games-container">
        <!-- Snake Game Card -->
        <a href="/PlayZone/Snake" class="game-card game-card--snake">
            <div class="game-preview snake-preview">
                <div class="snake-grid"></div>
                <div class="snake-body">
                    <div class="snake-segment head"></div>
                    <div class="snake-segment"></div>
                    <div class="snake-segment"></div>
                    <div class="snake-segment"></div>
                    <div class="snake-segment"></div>
                    <div class="snake-segment"></div>
                </div>
                <div class="snake-food"></div>
            </div>
            <div class="game-content">
                <span class="game-badge"><i class="fas fa-gamepad"></i> Classic</span>
                <h2 class="game-title">Snake</h2>
                <p class="game-description">
                    The classic arcade game reimagined with modern graphics. Guide your snake, eat food to grow longer, and avoid hitting walls or yourself. How long can you survive?
                </p>
                <div class="game-rules">
                    <h4>How to Play</h4>
                    <ul>
                        <li><i class="fas fa-circle"></i> Control the snake to eat the red food</li>
                        <li><i class="fas fa-circle"></i> Each food makes the snake grow longer</li>
                        <li><i class="fas fa-circle"></i> Don't hit the walls or your own tail</li>
                        <li><i class="fas fa-circle"></i> Build combos for bonus points</li>
                    </ul>
                </div>
                <div class="game-controls">
                    <span class="control-tag"><kbd>↑</kbd><kbd>↓</kbd><kbd>←</kbd><kbd>→</kbd> Move</span>
                    <span class="control-tag"><kbd>P</kbd> Pause</span>
                    <span class="control-tag"><i class="fas fa-hand-pointer"></i> Swipe</span>
                </div>
                <button class="play-btn">
                    <i class="fas fa-play"></i>
                    Play Snake
                </button>
            </div>
        </a>

        <!-- 3D Maze Card -->
        <a href="/PlayZone/Maze" class="game-card game-card--maze">
            <div class="game-preview maze-preview">
                <div class="maze-3d">
                    <div class="maze-wall h" style="top: 0; left: 0;"></div>
                    <div class="maze-wall h" style="top: 0; left: 60px;"></div>
                    <div class="maze-wall h" style="top: 0; left: 120px;"></div>
                    <div class="maze-wall v" style="top: 0; left: 0;"></div>
                    <div class="maze-wall v" style="top: 50px; left: 40px;"></div>
                    <div class="maze-wall h" style="top: 50px; left: 80px;"></div>
                    <div class="maze-wall v" style="top: 100px; left: 20px;"></div>
                    <div class="maze-wall h" style="top: 100px; left: 60px;"></div>
                    <div class="maze-wall v" style="top: 0; right: 0;"></div>
                    <div class="maze-player"></div>
                    <div class="maze-goal"></div>
                </div>
            </div>
            <div class="game-content">
                <span class="game-badge"><i class="fas fa-cube"></i> 3D Adventure</span>
                <h2 class="game-title">3D Maze</h2>
                <p class="game-description">
                    Immersive first-person maze escape. Navigate through neon-lit corridors with your flashlight, find the glowing portal, and escape as fast as possible. Can you beat the clock?
                </p>
                <div class="game-rules">
                    <h4>How to Play</h4>
                    <ul>
                        <li><i class="fas fa-circle"></i> Navigate the 3D maze in first-person view</li>
                        <li><i class="fas fa-circle"></i> Find the glowing green portal to escape</li>
                        <li><i class="fas fa-circle"></i> Race against time for the best score</li>
                        <li><i class="fas fa-circle"></i> Use the minimap to track your position</li>
                    </ul>
                </div>
                <div class="game-controls">
                    <span class="control-tag"><kbd>W</kbd><kbd>A</kbd><kbd>S</kbd><kbd>D</kbd> Move</span>
                    <span class="control-tag"><i class="fas fa-mouse"></i> Look</span>
                    <span class="control-tag"><i class="fas fa-hand-pointer"></i> Touch</span>
                </div>
                <button class="play-btn">
                    <i class="fas fa-play"></i>
                    Play Maze
                </button>
            </div>
        </a>
    </main>

    <footer class="playzone-footer">
        Built with Three.js & Canvas | <a href="/">Anastasiia Portfolio</a>
    </footer>
</div>

</body>
</html>
