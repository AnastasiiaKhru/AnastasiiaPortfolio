            color: #64748b;
            max-width: 500px;
            margin: 0 auto;
            line-height: 1.5;
            font-weight: 400;
        }

        .player-form {
            background: white;
            border-radius: 20px;
            padding: 2.5rem;
            max-width: 500px;
            margin: 0 auto;
            box-shadow: var(--shadow-md);
            text-align: center;
            border: 1px solid var(--glass-border);
        }

        .player-form h2 {
