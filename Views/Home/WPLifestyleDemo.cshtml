@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>WanderLens — Slow Travel & Creative Living · WordPress Magazine</title>
    <meta name="description" content="Premium editorial WordPress theme. Query Loop, Cover block, newsletter. For storytellers and creators." />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:ital,wght@0,500;0,600;0,700;1,500&family=Source+Sans+3:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
    <style>
        :root {
            --amber: #d97706;
            --amber-dark: #b45309;
            --amber-light: #fbbf24;
            --text: #1c1917;
            --text-muted: #6b7280;
            --bg: #fefdfb;
            --surface: #ffffff;
            --border: rgba(217,119,6,0.14);
            --radius: 12px;
            --radius-lg: 18px;
            --radius-xl: 24px;
            --shadow: 0 4px 20px rgba(0,0,0,0.06), 0 2px 8px rgba(0,0,0,0.03);
            --shadow-lg: 0 20px 48px rgba(0,0,0,0.1), 0 4px 12px rgba(0,0,0,0.05);
            --transition: 0.35s cubic-bezier(0.4, 0, 0.2, 1);
        }
        * { box-sizing: border-box; margin: 0; padding: 0; }
        html { scroll-behavior: smooth; scroll-padding-top: 72px; }
        body { font-family: 'Source Sans 3', sans-serif; color: var(--text); line-height: 1.7; -webkit-font-smoothing: antialiased; background: var(--bg); }

        .wp-demo-badge {
            position: fixed; top: 0; right: 1rem; z-index: 250;
            padding: 0.4rem 0.75rem; background: #23282d; color: #fff;
            font-size: 0.7rem; font-weight: 600; letter-spacing: 0.05em;
            border-radius: 0 0 6px 6px; box-shadow: 0 2px 8px rgba(0,0,0,0.15);
        }
        .wp-demo-badge i { margin-right: 0.35rem; color: #00a0d2; }

        .progress-bar { position: fixed; top: 0; left: 0; height: 3px; background: linear-gradient(90deg, var(--amber), var(--amber-light)); z-index: 300; width: 0%; transition: width 0.08s ease; }

        header {
            background: rgba(254,253,251,0.96);
            backdrop-filter: blur(20px); -webkit-backdrop-filter: blur(20px);
            position: sticky; top: 0; z-index: 100;
            border-bottom: 1px solid var(--border);
            transition: box-shadow 0.25s ease;
        }
        header.scrolled { box-shadow: 0 4px 20px rgba(0,0,0,0.06); }
        .header-inner { max-width: 1140px; margin: 0 auto; padding: 0 1.5rem; display: flex; align-items: center; justify-content: space-between; height: 72px; }
        .logo { font-family: 'Playfair Display', serif; font-size: 1.75rem; font-weight: 600; color: var(--text); letter-spacing: -0.02em; }
        nav ul { list-style: none; display: flex; gap: 2rem; margin: 0; padding: 0; }
        nav a { text-decoration: none; color: var(--text-muted); font-weight: 600; font-size: 0.95rem; transition: color 0.2s; }
        nav a:hover, nav a.active { color: var(--amber); }
        .nav-toggle { display: none; background: none; border: none; cursor: pointer; padding: 0.5rem; }
        .nav-toggle span { display: block; width: 22px; height: 2px; background: var(--text); margin: 5px 0; border-radius: 1px; }

        .hero-full {
            position: relative;
            min-height: 82vh;
            display: flex;
            align-items: flex-end;
            background: linear-gradient(180deg, transparent 25%, rgba(0,0,0,0.4) 60%, rgba(0,0,0,0.85) 100%);
            overflow: hidden;
        }
        .hero-slider { position: absolute; inset: 0; z-index: -1; }
        .hero-slide { position: absolute; inset: 0; opacity: 0; transition: opacity 1s ease; }
        .hero-slide.active { opacity: 1; z-index: 1; }
        .hero-slide img { width: 100%; height: 100%; object-fit: cover; transition: transform 10s ease; }
        .hero-full:hover .hero-slide.active img { transform: scale(1.05); }
        .hero-dots { position: absolute; bottom: 8rem; left: 50%; transform: translateX(-50%); display: flex; gap: 0.5rem; z-index: 10; }
        .hero-dot { width: 8px; height: 8px; border-radius: 50%; border: 2px solid rgba(255,255,255,0.6); background: transparent; cursor: pointer; transition: all 0.3s; }
        .hero-dot.active { background: var(--amber); border-color: var(--amber); }
        .hero-content { animation: hero-fade 1s ease both; }
        @@keyframes hero-fade { from { opacity: 0; transform: translateY(20px); } to { opacity: 1; transform: translateY(0); } }
        .hero-content { padding: 4rem 1.5rem 3.5rem; max-width: 1140px; margin: 0 auto; width: 100%; }
        .hero-tag { font-size: 0.7rem; font-weight: 800; text-transform: uppercase; letter-spacing: 0.2em; color: var(--amber); margin-bottom: 0.75rem; }
        .hero-full h1 { font-family: 'Playfair Display', serif; font-size: clamp(2.75rem, 6vw, 4.25rem); font-weight: 600; color: #fff; margin: 0 0 1rem; line-height: 1.15; max-width: 720px; letter-spacing: -0.02em; text-shadow: 0 2px 20px rgba(0,0,0,0.3); }
        .hero-meta { display: flex; gap: 2rem; color: rgba(255,255,255,0.9); font-size: 0.9rem; font-weight: 500; }
        .hero-meta span { display: flex; align-items: center; gap: 0.5rem; }

        .categories-bar { padding: 1.5rem 0; border-bottom: 1px solid var(--border); }
        .categories-inner { max-width: 1140px; margin: 0 auto; padding: 0 1.5rem; display: flex; gap: 0.5rem; flex-wrap: wrap; justify-content: center; }
        .cat-pill { padding: 0.6rem 1.5rem; border-radius: 100px; font-size: 0.9rem; font-weight: 600; text-decoration: none; color: var(--text-muted); background: rgba(217,119,6,0.06); transition: all var(--transition); cursor: pointer; border: none; font-family: inherit; }
        .cat-pill:hover, .cat-pill.active { background: var(--amber); color: #fff; transform: translateY(-1px); box-shadow: 0 4px 12px rgba(217,119,6,0.25); }
        .cat-pill.active { font-weight: 700; }

        .bento { max-width: 1140px; margin: 0 auto; padding: 4rem 1.5rem; }
        .bento-grid { display: grid; grid-template-columns: repeat(12, 1fr); gap: 1.25rem; position: relative; grid-auto-flow: dense; }
        .bento-item { border-radius: var(--radius-lg); overflow: hidden; position: relative; }
        .bento-item a { display: block; height: 100%; text-decoration: none; color: inherit; }
        .bento-item img { width: 100%; height: 100%; object-fit: cover; transition: transform 0.6s cubic-bezier(0.25,0.46,0.45,0.94); }
        .bento-item:hover img { transform: scale(1.08); }
        .bento-item .overlay { position: absolute; inset: 0; background: linear-gradient(180deg, transparent 30%, rgba(0,0,0,0.5) 70%, rgba(0,0,0,0.9) 100%); display: flex; flex-direction: column; justify-content: flex-end; padding: 1.75rem; transition: background 0.35s ease; }
        .bento-item:hover .overlay { background: linear-gradient(180deg, transparent 20%, rgba(0,0,0,0.6) 65%, rgba(0,0,0,0.95) 100%); }
        .bento-item .tag { font-size: 0.65rem; font-weight: 800; letter-spacing: 0.18em; color: var(--amber); margin-bottom: 0.35rem; }
        .bento-item h3 { font-family: 'Playfair Display', serif; font-size: 1.5rem; color: #fff; margin: 0; font-weight: 600; line-height: 1.3; transition: transform 0.3s; }
        .bento-item:hover h3 { transform: translateY(-2px); }
        .bento-item .meta { font-size: 0.8rem; color: rgba(255,255,255,0.8); margin-top: 0.35rem; }
        .bento-item.lg { grid-column: span 8; grid-row: span 2; min-height: 440px; transition: opacity var(--transition), transform var(--transition); }
        .bento-item.md { grid-column: span 4; min-height: 210px; transition: opacity var(--transition), transform var(--transition); }
        .bento-item.sm { grid-column: span 4; min-height: 210px; transition: opacity var(--transition), transform var(--transition); }
        .bento-item.hidden { opacity: 0; visibility: hidden; position: absolute; pointer-events: none; transform: scale(0.92); transition: opacity 0.4s ease, transform 0.4s ease, visibility 0.4s; }

        .latest { background: var(--surface); padding: 4rem 0 3rem; border-top: 1px solid var(--border); }
        .latest-inner { max-width: 1140px; margin: 0 auto; padding: 0 1.5rem; }
        .section-head { display: flex; justify-content: space-between; align-items: baseline; margin-bottom: 2.5rem; flex-wrap: wrap; gap: 1rem; }
        .section-title { font-family: 'Playfair Display', serif; font-size: 2.25rem; font-weight: 600; margin: 0; color: var(--text); }
        .section-link { color: var(--amber); font-weight: 700; font-size: 0.95rem; text-decoration: none; transition: color 0.2s; }
        .section-link:hover { color: var(--amber-dark); }
        .posts-grid { display: grid; grid-template-columns: repeat(3, 1fr); gap: 1.75rem; }
        .posts-carousel { overflow-x: auto; scroll-snap-type: x mandatory; -webkit-overflow-scrolling: touch; scrollbar-width: none; }
        .posts-carousel::-webkit-scrollbar { display: none; }
        .posts-carousel .posts-grid { display: flex; flex-wrap: nowrap; padding-bottom: 0.5rem; }
        .posts-carousel .post-card { flex: 0 0 340px; scroll-snap-align: start; }
        .posts-carousel-wrap { position: relative; padding: 0 3rem; }
        .posts-nav { position: absolute; top: 50%; transform: translateY(-50%); width: 44px; height: 44px; border-radius: 50%; border: 2px solid var(--border); background: var(--surface); color: var(--amber); cursor: pointer; display: flex; align-items: center; justify-content: center; transition: all 0.25s; box-shadow: var(--shadow); z-index: 5; }
        .posts-nav:hover { background: var(--amber); color: #fff; border-color: var(--amber); }
        .posts-nav.prev { left: 0.5rem; }
        .posts-nav.next { right: 0.5rem; }
        .post-card { text-decoration: none; color: inherit; display: flex; flex-direction: column; transition: all 0.35s cubic-bezier(0.4,0,0.2,1); border-radius: var(--radius); overflow: hidden; background: var(--surface); border: 1px solid var(--border); box-shadow: 0 2px 12px rgba(0,0,0,0.04); }
        .post-card:hover { transform: translateY(-4px); box-shadow: var(--shadow-lg); }
        .post-card:hover .post-card__img { transform: scale(1.05); }
        .post-card__img-wrap { border-radius: var(--radius) var(--radius) 0 0; overflow: hidden; aspect-ratio: 4/3; background: var(--bg); }
        .post-card__img { width: 100%; height: 100%; object-fit: cover; transition: transform 0.5s ease; }
        .post-card__body { padding: 1.5rem 1.25rem; flex: 1; display: flex; flex-direction: column; }
        .post-card .tag { font-size: 0.65rem; font-weight: 800; letter-spacing: 0.15em; color: var(--amber); margin-bottom: 0.5rem; }
        .post-card h3 { font-family: 'Playfair Display', serif; font-size: 1.5rem; margin: 0 0 0.6rem; font-weight: 600; line-height: 1.3; color: var(--text); }
        .post-card p { margin: 0; color: var(--text-muted); font-size: 0.95rem; line-height: 1.65; }
        .post-card .read-time { font-size: 0.8rem; color: var(--text-muted); margin-top: auto; padding-top: 1rem; display: flex; align-items: center; gap: 0.5rem; font-weight: 500; }

        .about-section { background: var(--bg); padding: 3rem 1.5rem 4rem; }
        .about-inner { max-width: 1140px; margin: 0 auto; }
        .author-block {
            max-width: 100%;
            padding: 2.75rem 2.5rem;
            display: grid;
            grid-template-columns: 160px 1fr;
            gap: 2rem;
            align-items: center;
            background: var(--surface);
            border-radius: var(--radius-xl);
            border: 1px solid var(--border);
            box-shadow: var(--shadow);
            transition: transform 0.4s ease, box-shadow 0.4s ease;
        }
        .author-block:hover { transform: translateY(-3px); box-shadow: var(--shadow-lg); }
        .author-avatar { width: 140px; height: 140px; border-radius: 50%; object-fit: cover; border: 3px solid var(--surface); box-shadow: var(--shadow); }
        .author-name { font-family: 'Playfair Display', serif; font-size: 1.6rem; font-weight: 600; margin: 0 0 0.25rem; color: var(--text); }
        .author-title { font-size: 0.9rem; color: var(--amber); font-weight: 700; margin-bottom: 0.75rem; }
        .author-bio { color: var(--text-muted); font-size: 1.05rem; line-height: 1.75; margin: 0 0 1rem; }
        .author-social { display: flex; gap: 0.75rem; }
        .author-social a { width: 36px; height: 36px; border-radius: 50%; background: rgba(217,119,6,0.1); color: var(--amber); display: flex; align-items: center; justify-content: center; text-decoration: none; transition: all 0.25s; }
        .author-social a:hover { background: var(--amber); color: #fff; transform: translateY(-2px); }

        .newsletter {
            max-width: 540px;
            margin: 2.5rem auto 0;
            padding: 2.75rem 2.5rem;
            background: var(--surface);
            border-radius: var(--radius-xl);
            text-align: center;
            border: 1px solid var(--border);
            box-shadow: var(--shadow);
        }
        .newsletter h2 { font-family: 'Playfair Display', serif; font-size: 2.5rem; margin: 0 0 0.5rem; color: var(--text); }
        .newsletter p { color: var(--text-muted); margin: 0 0 1.75rem; font-size: 1.05rem; line-height: 1.65; }
        .newsletter form { display: flex; gap: 0.75rem; max-width: 420px; margin: 0 auto; flex-wrap: wrap; justify-content: center; }
        .newsletter form.loading button { opacity: 0.8; pointer-events: none; position: relative; }
        .newsletter form.loading button::after { content: ''; position: absolute; width: 16px; height: 16px; border: 2px solid rgba(255,255,255,0.5); border-top-color: #fff; border-radius: 50%; animation: spin 0.6s linear infinite; margin-left: 0.5rem; }
        @@keyframes spin { to { transform: rotate(360deg); } }
        .newsletter input { flex: 1; min-width: 240px; padding: 1rem 1.35rem; border: 2px solid rgba(217,119,6,0.25); border-radius: var(--radius); font-family: inherit; font-size: 1rem; background: #fff; transition: border-color 0.2s, box-shadow 0.2s; }
        .newsletter input:focus { outline: none; border-color: var(--amber); box-shadow: 0 0 0 4px rgba(217,119,6,0.15); }
        .newsletter button { padding: 1rem 1.75rem; background: var(--amber); color: #fff; border: none; border-radius: var(--radius); font-weight: 700; cursor: pointer; font-family: inherit; transition: all 0.25s; }
        .newsletter button:hover { background: var(--amber-dark); transform: translateY(-2px); box-shadow: 0 6px 20px rgba(217,119,6,0.35); }
        .newsletter-success { display: none; color: var(--amber-dark); font-weight: 700; margin-top: 1rem; }
        .newsletter form.submitted .newsletter-success { display: block; }
        .newsletter form.submitted button, .newsletter form.submitted input { display: none; }

        .tech-bar { padding: 2rem 1.5rem; text-align: center; background: #f7f6f4; border-top: 1px solid var(--border); }
        .wp-features-bar { padding: 2rem 1rem; background: rgba(217,119,6,0.04); border-top: 1px solid var(--border); }
        .wp-features-bar .wp-features-title { font-size: 0.65rem; font-weight: 800; text-transform: uppercase; letter-spacing: 0.2em; color: var(--text-muted); text-align: center; margin-bottom: 1rem; }
        .wp-features-bar .wp-features-wrap { display: flex; flex-wrap: wrap; justify-content: center; gap: 0.6rem; }
        .wp-features-bar span { font-size: 0.65rem; font-weight: 700; padding: 0.35rem 0.7rem; background: var(--surface); color: var(--text-muted); border: 1px solid var(--border); border-radius: 6px; display: inline-flex; align-items: center; gap: 0.35rem; }
        .wp-features-bar span i { color: var(--amber); font-size: 0.7rem; }
        .tech-bar span { font-size: 0.75rem; font-weight: 600; padding: 0.4rem 0.9rem; background: rgba(255,255,255,0.8); color: var(--text-muted); border: 1px solid rgba(0,0,0,0.06); border-radius: 4px; margin: 0 0.35rem 0.4rem 0; display: inline-block; }

        .back-to-top {
            position: fixed; bottom: 1.5rem; right: 1.5rem; z-index: 200;
            width: 48px; height: 48px; border-radius: 50%;
            background: var(--amber); color: #fff; border: none;
            cursor: pointer; display: none; align-items: center; justify-content: center;
            box-shadow: var(--shadow-lg); transition: all var(--transition);
        }
        .back-to-top:hover { background: var(--amber-dark); transform: translateY(-2px); }
        .back-to-top.show { display: flex; }

        .reveal { opacity: 0; transform: translateY(20px); transition: opacity 0.6s ease, transform 0.6s ease; }
        .reveal.visible { opacity: 1; transform: translateY(0); }

        .newsletter-success { animation: fade-in 0.4s ease; }
        @@keyframes fade-in { from { opacity: 0; transform: translateY(-8px); } to { opacity: 1; transform: translateY(0); } }

        /* Testimonials */
        .testimonials-section { padding: 4rem 0; background: var(--surface); border-top: 1px solid var(--border); }
        .testimonials-section .section-head { margin-bottom: 2.5rem; }
        .testimonials-section .section-title { font-family: 'Playfair Display', serif; font-size: 2.25rem; font-weight: 600; margin: 0; color: var(--text); }
        .testimonials-section .section-sub { font-size: 1rem; color: var(--text-muted); margin-top: 0.5rem; }
        .testimonials-wrap { position: relative; max-width: 960px; margin: 0 auto; padding: 0 3rem; }
        .testimonials-track-wl { display: flex; gap: 1.5rem; overflow-x: auto; scroll-snap-type: x mandatory; -webkit-overflow-scrolling: touch; scrollbar-width: none; padding-bottom: 0.5rem; }
        .testimonials-track-wl::-webkit-scrollbar { display: none; }
        .testimonial-slide-wl { flex: 0 0 calc(50% - 0.75rem); min-width: 320px; scroll-snap-align: start; padding: 2rem; background: var(--bg); border-radius: var(--radius-lg); border: 1px solid var(--border); transition: box-shadow 0.3s; }
        .testimonial-slide-wl:hover { box-shadow: var(--shadow); }
        .testimonial-slide-wl .quote { font-family: 'Playfair Display', serif; font-size: 1.25rem; font-style: italic; line-height: 1.65; color: var(--text); margin-bottom: 1rem; }
        .testimonial-slide-wl strong { display: block; font-size: 0.95rem; }
        .testimonial-slide-wl span { font-size: 0.85rem; color: var(--text-muted); }
        .testimonial-nav-wl { position: absolute; top: 50%; transform: translateY(-50%); width: 44px; height: 44px; border-radius: 50%; border: 2px solid var(--border); background: var(--surface); color: var(--amber); cursor: pointer; display: flex; align-items: center; justify-content: center; transition: all 0.25s; box-shadow: var(--shadow); z-index: 5; }
        .testimonial-nav-wl:hover { background: var(--amber); color: #fff; border-color: var(--amber); }
        .testimonial-nav-wl.prev { left: 0.5rem; }
        .testimonial-nav-wl.next { right: 0.5rem; }

        a:focus-visible, button:focus-visible { outline: 2px solid var(--amber); outline-offset: 2px; }
        @@media (prefers-reduced-motion: reduce) { .reveal { opacity: 1; transform: none; transition: none; } .hero-content { animation: none; } .newsletter-success { animation: none; } .newsletter form.loading button::after { display: none; } }
        footer { background: #23282d; color: #a0a5aa; padding: 3rem 1.5rem; text-align: center; }
        footer .logo { color: #fff; display: block; margin-bottom: 1rem; }
        footer p { margin: 0; font-size: 0.9rem; line-height: 1.6; color: #a0a5aa; }
        .wp-credit { color: #00a0d2; font-weight: 600; }

        @@media (max-width: 960px) {
            .bento-item.lg { grid-column: span 12; min-height: 360px; }
            .bento-item.md, .bento-item.sm { grid-column: span 6; }
            .posts-grid { grid-template-columns: 1fr; }
            .posts-carousel .posts-grid { flex-direction: column; }
            .posts-carousel .post-card { flex: 0 0 auto; }
            .author-block { grid-template-columns: 1fr; text-align: center; }
        }
        @@media (max-width: 768px) {
            .nav-toggle { display: flex; flex-direction: column; justify-content: center; }
            nav ul { display: none; position: absolute; top: 72px; left: 0; right: 0; background: var(--bg); flex-direction: column; padding: 1.5rem; border-bottom: 1px solid var(--border); }
            nav ul.show { display: flex; }
            .bento-item.md, .bento-item.sm { grid-column: span 12; }
            .newsletter { padding: 2.5rem 1.5rem; margin: 0 1rem 4rem; }
            .newsletter form { flex-direction: column; }
        }
    </style>
</head>
<body>
    <div class="wp-demo-badge"><i class="fab fa-wordpress"></i> WordPress Theme Demo</div>
    <div class="progress-bar" id="progressBar"></div>

    <header>
        <div class="header-inner">
            <a href="#" class="logo">WanderLens</a>
            <nav>
                <button class="nav-toggle" aria-label="Menu" onclick="document.querySelector('nav ul').classList.toggle('show')"><span></span><span></span><span></span></button>
                <ul>
                    <li><a href="#latest">Stories</a></li>
                    <li><a href="#guides">Guides</a></li>
                    <li><a href="#testimonials">Reviews</a></li>
                    <li><a href="#about">About</a></li>
                    <li><a href="#newsletter">Newsletter</a></li>
                </ul>
            </nav>
        </div>
    </header>

    <section class="hero-full">
        <div class="hero-slider" id="heroSlider">
            <div class="hero-slide active"><img src="https://images.unsplash.com/photo-1500530855697-b586d89ba3ee?auto=format&fit=crop&w=1600&q=90" alt="Slow travel" /></div>
            <div class="hero-slide"><img src="https://images.unsplash.com/photo-1488646953014-85cb44e25828?auto=format&fit=crop&w=1600&q=90" alt="Lisbon" /></div>
            <div class="hero-slide"><img src="https://images.unsplash.com/photo-1523531294919-4bcd7c65e216?auto=format&fit=crop&w=1600&q=90" alt="Porto" /></div>
        </div>
        <div class="hero-dots" id="heroDots"></div>
        <div class="hero-content">
            <div class="hero-tag">Query Loop · Cover Block · WordPress</div>
            <h1>Slow travel itineraries. Stories that move you.</h1>
            <div class="hero-meta">
                <span><i class="far fa-clock"></i> 8 min read</span>
                <span><i class="far fa-folder"></i> City Guides</span>
                <span><i class="far fa-user"></i> Emma Rivera</span>
            </div>
        </div>
    </section>

    <div class="categories-bar" id="guides">
        <div class="categories-inner">
            <button type="button" class="cat-pill active" data-filter="all">All</button>
            <button type="button" class="cat-pill" data-filter="photologue">Photologue</button>
            <button type="button" class="cat-pill" data-filter="work">Mindful Work</button>
            <button type="button" class="cat-pill" data-filter="creator">Creator</button>
            <button type="button" class="cat-pill" data-filter="guides">City Guides</button>
        </div>
    </div>

    <section class="bento reveal">
        <div class="bento-grid">
