    <style>
        .hero-section {
            padding: 4rem 0;
            margin-bottom: 3rem;
            position: relative;
        }

        .hero-content {
            background-color: rgba(255, 255, 255, 0.9);
            backdrop-filter: blur(5px);
            border-radius: 15px;
            padding: 2rem;
            border: 1px solid #D4D4D4;
            box-shadow: 0 4px 12px rgba(43, 43, 43, 0.1);
            text-align: center;
        }

        .hero-title, .section-title, .h5, h1, h2, h3 {
            font-family: 'Roboto', sans-serif;
            font-weight: 700;
        }

        .hero-title {
            color: #2B2B2B;
            font-size: 2.5rem;
            margin-bottom: 1rem;
        }

        .hero-subtitle {
            color: #B3B3B3;
            font-size: 1.2rem;
            margin-bottom: 2rem;
        }

        .deployment-section {
            background-color: rgba(255, 255, 255, 0.9);
            backdrop-filter: blur(5px);
            border-radius: 15px;
            padding: 2rem;
            margin-bottom: 3rem;
            border: 1px solid #D4D4D4;
            text-align: center;
        }

        .deployment-link {
            color: #B3B3B3;
            font-weight: bold;
            text-decoration: none;
        }

        .deployment-link:hover {
            color: #2B2B2B;
            text-decoration: underline;
        }

        .login-info {
            margin-top: 1rem;
            color: #2B2B2B;
        }

        .section-container {
            background-color: rgba(255, 255, 255, 0.9);
            backdrop-filter: blur(5px);
            border-radius: 15px;
            padding: 2rem;
            margin-bottom: 3rem;
            border: 1px solid #D4D4D4;
        }

        .section-title {
            color: var(--pepper);
            margin-bottom: 2rem;
            text-align: center;
        }

        .skill-card {
            background-color: rgba(255, 255, 255, 0.95);
            border-radius: 15px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
            padding: 2rem;
            height: 100%;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .skill-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
        }

        .skill-icon {
            font-size: 2.5rem;
            color: #2B2B2B;
            margin-bottom: 1.5rem;
            text-align: center;
