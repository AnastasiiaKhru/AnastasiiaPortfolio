        .skill-card h3 {
            color: #2B2B2B;
            font-size: 1.5rem;
            margin-bottom: 1.5rem;
            text-align: center;
        }

        .skill-list {
            list-style: none;
            padding: 0;
            margin: 0;
        }

        .skill-list li {
            display: flex;
            align-items: center;
            margin-bottom: 0.75rem;
            color: #444;
            font-size: 1rem;
        }

        .skill-list li i {
            margin-right: 0.75rem;
            color: #2B2B2B;
            font-size: 0.9rem;
        }

        .experience-item {
            border-left: 3px solid var(--pepper);
            padding-left: 1.5rem;
            margin-bottom: 2rem;
        }

        .experience-title {
            color: var(--pepper);
            margin-bottom: 0.5rem;
        }

        .experience-company {
            color: var(--mid-grey);
            font-weight: 500;
        }

        .project-card {
            background-color: rgba(255, 255, 255, 0.85);
            backdrop-filter: blur(5px);
            border: 1px solid #D4D4D4;
            border-radius: 10px;
            overflow: hidden;
            transition: all 0.3s ease;
        }

        .project-card:hover {
            border-color: #2B2B2B;
            transform: translateY(-5px);
            box-shadow: 0 4px 12px rgba(43, 43, 43, 0.1);
            background-color: rgba(255, 255, 255, 0.95);
        }

        .project-title {
            color: #2B2B2B;
            margin-bottom: 1rem;
        }

        .contact-section {
            padding: 0;
            margin-top: 0;
        }

        .contact-form {
            background-color: transparent;
            backdrop-filter: none;
            border-radius: 0;
            padding: 0;
            border: none;
            box-shadow: none;
        }

        .form-control {
            /* General form-control reset or override if needed, else handled by #contact .form-control */
        }

        .btn-send {
            /* Reset styles */
        }

        .timeline-container {
            background-color: var(--lsalt);
            border-radius: 15px;
            padding: 2rem;
            margin-bottom: 3rem;
            max-width: 800px;
            margin-left: auto;
            margin-right: auto;
            box-shadow: var(--shadow-md);
            border: 1px solid var(--light-grey);
        }

        .timeline-item {
            margin-bottom: 2rem;
            text-align: left;
        }

        .profile-image {
            max-width: 60%; /* Restore relative width */
            height: auto;
            display: block; /* Restore display block */
            margin: 0 auto; /* Restore auto margin */
            border-radius: var(--radius-lg);
            box-shadow: var(--shadow-md);
        }

        #skills {
            background-color: var(--lsalt);
            padding: 2rem;
            border-radius: 15px;
            box-shadow: var(--shadow-md);
            border: 1px solid var(--light-grey);
            margin-bottom: 3rem;
        }

        #education {
            background-color: var(--lsalt);
            padding: 4rem 0;
            margin-bottom: 3rem;
        }

        .education-card {
            background-color: rgba(255, 255, 255, 0.95);
            border-radius: 12px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
            padding: 2.5rem;
            height: 100%;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            border: 1px solid rgba(0, 0, 0, 0.05);
        }

        .education-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 30px rgba(0, 0, 0, 0.12);
        }

        .education-header {
            margin-bottom: 2rem;
            padding-bottom: 1.5rem;
            border-bottom: 1px solid rgba(0, 0, 0, 0.1);
        }

        .diploma-title {
            color: #2B2B2B;
            font-size: 1.75rem;
            font-weight: 600;
            margin-bottom: 0.5rem;
        }

        .education-meta {
            color: #666;
            font-size: 1.1rem;
        }

        .education-meta .separator {
            margin: 0 0.75rem;
            color: #999;
        }

        .education-content {
            padding: 0 0.5rem;
        }

        .expertise-section, .achievements-section {
            margin-bottom: 2rem;
        }

        .expertise-section h4, .achievements-section h4 {
            color: #2B2B2B;
            font-size: 1.3rem;
            font-weight: 600;
            margin-bottom: 1.25rem;
            padding-bottom: 0.5rem;
            border-bottom: 1px solid rgba(0, 0, 0, 0.05);
        }

        .expertise-list, .achievements-list {
            list-style: none;
            padding: 0;
            margin: 0;
        }

        .expertise-list li, .achievements-list li {
            display: flex;
            align-items: center;
            margin-bottom: 0.75rem;
            color: #444;
            font-size: 1rem;
            line-height: 1.5;
        }

        .expertise-list li i, .achievements-list li i {
            margin-right: 1rem;
            color: #2B2B2B;
            font-size: 1.1rem;
            min-width: 1.5rem;
            text-align: center;
        }

        @@media (max-width: 768px) {
            .education-card {
                padding: 1.5rem;
            }

            .diploma-title {
                font-size: 1.5rem;
            }

            .education-meta {
                font-size: 1rem;
            }

            .expertise-list li, .achievements-list li {
                font-size: 0.95rem;
            }

            .skill-card {
                padding: 1.5rem;
            }

            .skill-icon {
                font-size: 2rem;
            }

            .skill-card h3 {
                font-size: 1.3rem;
            }

            .skill-list li {
                font-size: 0.9rem;
            }
        }

        .separator {
            margin: 0 0.5rem;
            color: #999;
        }

        .expertise-section {
            margin-bottom: 2rem;
        }

        .expertise-section h3 {
            color: #2B2B2B;
            font-size: 1.4rem;
            margin-bottom: 1.5rem;
        }

        .expertise-item {
            display: flex;
            align-items: flex-start;
            margin-bottom: 1rem;
            padding: 0.75rem;
            background-color: rgba(255, 255, 255, 0.7);
            border-radius: 8px;
            transition: background-color 0.3s ease;
        }

        .expertise-item:hover {
            background-color: rgba(255, 255, 255, 0.9);
        }

        .expertise-icon {
            font-size: 1.2rem;
            margin-right: 1rem;
            color: #2B2B2B;
        }

        .expertise-text {
            font-size: 1rem;
            color: #444;
        }

        .achievements-section {
            margin-top: 2rem;
            padding-top: 2rem;
            border-top: 1px solid rgba(0, 0, 0, 0.1);
        }

        .achievements-section h3,
        .achievements-section h4 {
            color: #2B2B2B;
            font-size: 1.4rem;
            margin-bottom: 1.5rem;
        }

        .achievements-list {
            list-style: none;
            padding: 0;
            margin: 0;
        }

        .achievements-list li,
        .achievement-item {
            display: flex;
            align-items: center;
            margin-bottom: 1rem;
            padding: 0.75rem;
            background-color: rgba(255, 255, 255, 0.7);
            border-radius: 8px;
            transition: background-color 0.3s ease;
        }

        .achievements-list li:hover,
        .achievement-item:hover {
            background-color: rgba(255, 255, 255, 0.9);
        }

        .achievements-list li i,
        .achievement-icon {
            margin-right: 1rem;
            font-size: 1.1rem;
            color: #2B2B2B;
        }

        .achievement-text {
            color: #444;
        }

        /* Footer Styles */
        .site-footer {
            /* Remove max-width and centering for the block */
            /* max-width: 900px; */
            /* margin-left: auto; */
            /* margin-right: auto; */
            border-radius: 0; /* Remove border-radius for full-width */
            background-color: #f8f9fa; /* Light background */
            padding: 1rem 0; /* Reduce vertical padding for skinny footer */
            margin-top: 4rem;
            border-top: 1px solid #e7e7e7;
            text-align: center;
            color: #6c757d; /* Subtle text color */
            box-shadow: none; /* Remove shadow for full-width */
        }

        .footer-content {
            max-width: 900px; /* Constrain the content width */
            margin: 0 auto; /* Center the content */
            display: flex;
            flex-direction: column; /* Stack socials and copyright */
            align-items: center; /* Center items horizontally */
            /* Optional: Use row for side-by-side on larger screens */
            /* @@media (min-width: 768px) { */ /* Escaped */
            /*    flex-direction: row; */
            /*    justify-content: space-between; */
            /* } */
        }

        .footer-socials {
            margin-bottom: 0.5rem; /* Further reduce margin */
            display: flex;
            gap: 1.5rem;
            /* Optional: Add margin-top on small screens if stacked */
            /* @@media (max-width: 767px) { */ /* Escaped */
            /*     margin-top: 0.5rem; */
            /* } */
        }

        .social-icon {
            color: #6c757d;
            font-size: 1.2rem; /* Even smaller icons */
            transition: color 0.3s ease, transform 0.3s ease;
        }

        .social-icon:hover {
            color: #2B2B2B; /* Use primary dark color on hover */
            transform: translateY(-2px);
        }

        .footer-copyright {
            font-size: 0.8rem; /* Even smaller text */
        }

        /* Contact Section Styles */
        #contact {
            background-color: var(--lsalt);
            padding: 3rem 2rem;
            border-radius: 15px;
            box-shadow: var(--shadow-md);
            border: 1px solid var(--light-grey);
            margin-top: 3rem;
            margin-bottom: 3rem;
        }

        #contact h2 {
            color: var(--pepper);
            margin-bottom: 2.5rem;
            text-align: center;
        }

        #contact h4 {
            color: #2B2B2B;
            font-weight: 600;
            margin-bottom: 1.25rem; /* Increased spacing below heading */
        }

        #contact .col-md-6 p {
            line-height: 1.6; /* Improve readability of paragraph */
            margin-bottom: 1.5rem;
        }

        .contact-info {
            margin-top: 2rem; /* Added more space above contact items */
        }

        .contact-item {
            display: flex;
            align-items: center;
            margin-bottom: 1.25rem; /* Increased spacing between items */
            color: #444;
            font-size: 1rem; /* Ensure consistent font size */
        }

        .contact-item i {
            color: var(--pepper);
            font-size: 1.1rem; /* Slightly reduced icon size */
            margin-right: 1.25rem; /* Increased space after icon */
            width: 20px; /* Ensure consistent icon spacing */
            text-align: center;
            flex-shrink: 0; /* Prevent icon from shrinking */
        }

        .contact-item a,
        .contact-item span {
            color: #444;
            text-decoration: none;
            transition: color 0.3s ease;
            line-height: 1.5; /* Ensure consistent line height */
        }

        .contact-item a:hover {
            color: var(--pepper);
            text-decoration: underline;
        }

        /* Form Styling */
        #contact .form-label {
            font-weight: 500;
            color: #333;
            margin-bottom: 0.5rem;
        }

        #contact .form-control {
            background-color: #fff;
            border: 1px solid #ced4da;
            border-radius: 8px;
            padding: 0.75rem 1rem;
            transition: border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out;
        }

        #contact .form-control:focus {
            border-color: var(--pepper);
            outline: 0;
            box-shadow: 0 0 0 0.2rem rgba(193, 118, 109, 0.25); /* Using pepper color with alpha */
        }

        #contact textarea.form-control {
            min-height: 120px;
            resize: vertical;
        }

        #contact .btn-primary {
            background-color: var(--pepper);
            border-color: var(--pepper);
            padding: 0.75rem 1.5rem;
            font-weight: 500;
            border-radius: 8px;
            transition: background-color 0.3s ease, border-color 0.3s ease, transform 0.2s ease;
        }

        #contact .btn-primary:hover {
            background-color: #a55e54; /* Darker pepper */
            border-color: #a55e54;
            transform: translateY(-2px);
        }

        #contact .alert-success {
            background-color: #d1e7dd;
            border-color: #badbcc;
            color: #0f5132;
            border-radius: 8px;
        }

        .modal-content {
            border-radius: 15px;
        }

        .modal-header {
            border-top-left-radius: 15px;
            border-top-right-radius: 15px;
            padding: 1.5rem;
        }

        .btn-success {
            background-color: #28a745;
            border-color: #28a745;
            padding: 0.75rem 2rem;
            font-weight: 500;
            border-radius: 50px;
            transition: all 0.3s ease;
        }

        .btn-success:hover {
            background-color: #218838;
            border-color: #1e7e34;
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(40, 167, 69, 0.3);
        }

        .modal .fa-paper-plane {
            color: #28a745;
            animation: float 2s ease-in-out infinite;
        }

        @@keyframes float {
            0% { transform: translateY(0px); }
            50% { transform: translateY(-10px); }
            100% { transform: translateY(0px); }
        }

        .modal-backdrop.show {
            opacity: 0.7;
        }

        .modal.fade .modal-dialog {
            transition: transform 0.3s ease-out;
        }

        .modal.show .modal-dialog {
            transform: none;
        }

        .success-modal .modal-content {
            border: none;
            border-radius: 12px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        }

        .success-modal .modal-header {
            background: #2B2B2B !important;
            color: #f4f4f5 !important;
        }

        .success-modal .btn-dark {
            background: #2B2B2B !important;
            color: #f4f4f5 !important;
            border: none !important;
            padding: 12px 24px !important;
            border-radius: 6px !important;
            transition: all 0.3s ease !important;
        }

        .success-modal .btn-dark:hover {
            background: #444444 !important;
            transform: translateY(-1px);
        }

        .success-modal .fa-paper-plane {
            color: #2B2B2B !important;
            animation: modalIconFloat 2s infinite ease-in-out;
        }

        @@keyframes modalIconFloat {
            0%, 100% {
                transform: translateY(0);
            }
            50% {
                transform: translateY(-10px);
            }
        }

        .success-icon {
            font-size: 3rem;
            color: #10B981;
            margin-bottom: 1.5rem;
            animation: iconFloat 2s infinite ease-in-out;
        }

        .success-message {
            font-size: 1.2rem;
            color: #374151;
            margin-bottom: 1rem;
        }

        .success-note {
            color: #6B7280;
            font-size: 1rem;
        }

        /* Define animations using proper CSS syntax */
        @@keyframes modalSlideIn {
            from {
                opacity: 0;
                transform: translateY(-20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @@keyframes iconFloat {
            0%, 100% {
                transform: translateY(0);
            }
            50% {
                transform: translateY(-10px);
            }
        }

        /* Contact Form Styles */
        .contact-card {
            background: #ffffff;
            border: 1px solid #e2e2e3;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .contact-form .form-control {
            background-color: #f4f4f5 !important;
            color: #1e1e2e !important;
            border: 1px solid #e2e2e3 !important;
            padding: 12px !important;
            font-size: 16px !important;
            transition: all 0.3s ease !important;
        }

        .contact-form .form-control:focus {
            border-color: #8F7171 !important;
            box-shadow: 0 0 0 0.2rem rgba(143, 113, 113, 0.25) !important;
            outline: none !important;
        }

        .contact-form .form-group {
            margin-bottom: 1rem;
        }

        .contact-form label {
            color: #2a2a3b !important;
            font-weight: 500;
            margin-bottom: 0.5rem;
        }

        .contact-form textarea.form-control {
            min-height: 150px !important;
            resize: vertical;
        }

        .btn-send {
            background: #1a1a1a !important;
            color: #f4f4f5 !important;
            border: none !important;
            padding: 12px 24px !important;
            font-size: 16px !important;
            font-weight: 500 !important;
            transition: all 0.3s ease !important;
            border-radius: 4px !important;
        }

        .btn-send:hover {
            background: #22d3ee !important;
            transform: translateY(-1px);
            box-shadow: 0 4px 12px rgba(34, 211, 238, 0.25);
        }

        .btn-send:active {
            transform: translateY(0);
            box-shadow: none !important;
        }

        .contact-form .form-control::placeholder {
            color: #6c757d !important;
        }

        .contact-form .is-invalid {
            border-color: #dc3545 !important;
            background-image: none !important;
        }
    </style>
}

