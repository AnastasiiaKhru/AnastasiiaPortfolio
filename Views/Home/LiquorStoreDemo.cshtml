        // Countdown Timer
        function updateCountdown() {
            const now = new Date();
            const midnight = new Date();
            midnight.setHours(23, 59, 59, 999);
            const diff = midnight - now;
            
            const hours = Math.floor(diff / (1000 * 60 * 60));
            const minutes = Math.floor((diff % (1000 * 60 * 60)) / (1000 * 60));
            const seconds = Math.floor((diff % (1000 * 60)) / 1000);
            
            document.getElementById('countdown').textContent = 
                `${hours.toString().padStart(2, '0')}:${minutes.toString().padStart(2, '0')}:${seconds.toString().padStart(2, '0')}`;
        }
        setInterval(updateCountdown, 1000);
        updateCountdown();

        // Search Modal
        function toggleSearch() {
            document.getElementById('searchModal').classList.toggle('active');
            if (document.getElementById('searchModal').classList.contains('active')) {
                document.getElementById('searchInput').focus();
            }
        }

        // Product data for search
        const products = [
            { name: 'Macallan 18 Year Single Malt', category: 'whiskey', price: '$349.99' },
            { name: 'Johnnie Walker Blue Label', category: 'whiskey', price: '$229.99' },
            { name: 'Dom Prignon Vintage 2012', category: 'champagne', price: '$289.99' },
            { name: 'Veuve Clicquot Yellow Label', category: 'champagne', price: '$64.99' },
            { name: 'Mot & Chandon Imprial', category: 'champagne', price: '$54.99' },
            { name: 'Grey Goose Original Vodka', category: 'vodka', price: '$54.99' },
            { name: 'Belvedere Pure Polish Vodka', category: 'vodka', price: '$44.99' },
            { name: 'Absolut Elyx Single Estate', category: 'vodka', price: '$49.99' },
            { name: 'Chteau Margaux Grand Cru', category: 'wine', price: '$599.99' },
            { name: 'Opus One Napa Valley 2019', category: 'wine', price: '$449.99' },
            { name: 'Penfolds Bin 389 Cabernet', category: 'wine', price: '$79.99' },
            { name: 'Glencairn Glasses Set', category: 'merchandise', price: '$89.99' },
            { name: 'Wine Glass Set', category: 'merchandise', price: '$129.99' },
            { name: 'Crystal Decanter', category: 'merchandise', price: '$149.99' },
            { name: 'Ice Bucket Set', category: 'merchandise', price: '$79.99' },
            { name: 'Bar Caddy Organizer', category: 'merchandise', price: '$199.99' }
