    <div class="demo-badge-brand" style="position:fixed;bottom:1rem;left:50%;transform:translateX(-50%);background:linear-gradient(135deg,var(--accent),#238636);color:white;padding:0.6rem 1.5rem;border-radius:30px;font-size:0.85rem;font-weight:600;z-index:1000;box-shadow:0 4px 20px rgba(46,160,67,0.3);"><i class="fas fa-palette"></i> Brand Refresh Demo · Anastasiia</div>

    <script>
        (function(){
            var handle = document.getElementById('sliderHandle');
            var after = document.getElementById('sliderAfter');
            var inner = document.querySelector('.slider-inner');
            var container = document.getElementById('sliderContainer');
            var pos = 50;
            function setPos(p){
                pos = Math.max(5, Math.min(95, p));
                handle.style.left = pos + '%';
                after.style.clipPath = 'inset(0 ' + (100 - pos) + '% 0 0)';
            }
            function getPosFromEvent(clientX){
                var rect = inner.getBoundingClientRect();
                return (clientX - rect.left) / rect.width * 100;
            }
            document.querySelectorAll('.view-toggle').forEach(function(btn){
                btn.addEventListener('click', function(){
                    document.querySelectorAll('.view-toggle').forEach(function(b){ b.classList.remove('active'); });
                    this.classList.add('active');
                    var v = this.dataset.view;
                    container.classList.remove('view-before','view-after');
                    if(v==='before'){ container.classList.add('view-before'); setPos(0); }
                    else if(v==='after'){ container.classList.add('view-after'); setPos(100); }
                    else { setPos(50); }
                });
            });
            handle.addEventListener('mousedown', function(e){ e.preventDefault();
                function move(ev){ setPos(getPosFromEvent(ev.clientX)); }
                function up(){ document.removeEventListener('mousemove', move); document.removeEventListener('mouseup', up); }
                document.addEventListener('mousemove', move); document.addEventListener('mouseup', up);
            });
            inner.addEventListener('click', function(e){
                if(e.target !== handle && !handle.contains(e.target)) setPos(getPosFromEvent(e.clientX));
            });
            handle.addEventListener('touchstart', function(e){ e.preventDefault();
                function move(ev){ setPos(getPosFromEvent(ev.touches[0].clientX)); }
                function up(){ document.removeEventListener('touchmove', move); document.removeEventListener('touchend', up); }
                document.addEventListener('touchmove', move, { passive: false }); document.addEventListener('touchend', up);
            });
            document.addEventListener('keydown', function(e){
                if(e.key === 'ArrowLeft') setPos(pos - 5);
                else if(e.key === 'ArrowRight') setPos(pos + 5);
            });
            var resultsSection = document.getElementById('results');
            var cards = document.querySelectorAll('.result-card[data-target]');
            function animateCounters(){
                cards.forEach(function(card){
                    var target = +card.dataset.target, prefix = card.dataset.prefix || '', suffix = card.dataset.suffix || '';
                    var numEl = card.querySelector('.num'), start = 0, startTime = null;
                    function step(t){
                        if(!startTime) startTime = t;
                        var elapsed = t - startTime, progress = Math.min(1, elapsed / 1000);
                        var ease = 1 - Math.pow(1 - progress, 2), val = Math.round(start + (target - start) * ease);
                        numEl.textContent = prefix + val + suffix;
                        if(progress < 1) requestAnimationFrame(step);
                    }
                    requestAnimationFrame(step);
                });
            }
            var animated = false;
            var io = typeof IntersectionObserver !== 'undefined' ? new IntersectionObserver(function(entries){
                entries.forEach(function(entry){
                    if(entry.isIntersecting && !animated){ animated = true; animateCounters(); io.unobserve(resultsSection); }
                });
            }, { threshold: 0.3 }) : null;
            if(io && resultsSection) io.observe(resultsSection);

            var revealEls = document.querySelectorAll('.reveal');
            var revealIO = typeof IntersectionObserver !== 'undefined' ? new IntersectionObserver(function(entries){
                entries.forEach(function(entry){ if(entry.isIntersecting) entry.target.classList.add('visible'); });
            }, { threshold: 0.15, rootMargin: '0px 0px -40px 0px' }) : null;
            if(revealIO) revealEls.forEach(function(el){ revealIO.observe(el); });
        })();
    </script>
