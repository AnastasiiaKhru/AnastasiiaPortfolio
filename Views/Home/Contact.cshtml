@model AnastasiiaPortfolio.Models.ContactViewModel

@{
    ViewData["Title"] = "Contact";
}

<div class="container py-5">
    <div class="row mb-5">
        <div class="col-lg-8 mx-auto text-center">
            <h1 class="display-4 fw-bold mb-3">Get in Touch</h1>
            <p class="lead">I'd love to hear from you. Let's discuss your project or just say hello!</p>
        </div>
    </div>

    <div class="row">
        <!-- Contact Information -->
        <div class="col-lg-4 mb-4 mb-lg-0">
            <div class="card h-100" style="background: #2a2a3b; border: 1px solid rgba(244, 244, 245, 0.1);">
                <div class="card-body">
                    <h3 class="h5 mb-4" style="color: #f4f4f5;">Contact Information</h3>
                    <partial name="_ContactInfoPartial" />
                </div>
            </div>
        </div>

        <!-- Contact Form -->
        <div class="col-lg-8 mx-auto">
            <div class="card" style="background: #2a2a3b; border: 1px solid rgba(244, 244, 245, 0.1);">
                <div class="card-body p-4">
                    <h3 class="h5 mb-4" style="color: #f4f4f5;">Send a Message</h3>
                    
                    @if (!string.IsNullOrEmpty(TempData["Error"] as string))
                    {
                        <div class="alert alert-danger">@TempData["Error"]</div>
                    }
                    
                    <form asp-action="Contact" method="post">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="name" class="form-label text-light">Your Name</label>
                                    <input type="text" class="form-control contact-input" id="name" name="ContactForm.Name" required 
                                           style="background: #1e1e2e; color: white; border: 2px solid rgba(244, 244, 245, 0.4);">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="email" class="form-label text-light">Your Email</label>
                                    <input type="email" class="form-control contact-input" id="email" name="ContactForm.Email" required
                                           style="background: #1e1e2e; color: white; border: 2px solid rgba(244, 244, 245, 0.4);">
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-group">
                                    <label for="message" class="form-label text-light">Your Message</label>
                                    <textarea class="form-control contact-input" 
                                              id="message" 
                                              name="ContactForm.Message" 
                                              rows="5" 
                                              required
                                              style="background: #1e1e2e !important; 
                                                     color: white !important; 
                                                     border: 2px solid rgba(244, 244, 245, 0.4) !important;
                                                     min-height: 150px !important;"></textarea>
                                    <span class="text-danger field-validation-valid" data-valmsg-for="ContactForm.Message" data-valmsg-replace="true"></span>
                                </div>
                            </div>
                            <div class="col-12">
                                <button type="submit" class="btn btn-primary w-100" 
                                        style="background: #22d3ee; border: none; padding: 12px;">
                                    Send Message
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Social Links -->
    <div class="row mt-5">
        <div class="col-12 text-center">
            <h3 class="h5 mb-4" style="color: #f4f4f5;">Connect With Me</h3>
            <div class="d-flex justify-content-center gap-4">
                <a href="https://www.linkedin.com/in/anastasiia-khrustalova/" class="social-link" style="color: #22d3ee;">
                    <i class="fab fa-linkedin fa-2x"></i>
                </a>
                <a href="https://github.com/AnastasiiaKhr" class="social-link" style="color: #22d3ee;">
                    <i class="fab fa-github fa-2x"></i>
                </a>
            </div>
        </div>
    </div>
</div>

<style>
    body {
        background: #1e1e2e;
        color: #f4f4f5;
    }

    .card {
        border: none;
        box-shadow: 0 0 30px rgba(0, 0, 0, 0.2);
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

    .card:hover {
        transform: translateY(-2px);
        box-shadow: 0 0 40px rgba(34, 211, 238, 0.1);
    }

    .custom-input {
        background: #2a2a3b !important;
        border: 2px solid rgba(244, 244, 245, 0.4) !important;
        color: #ffffff !important;
        font-size: 1rem !important;
    }

    .custom-input:focus {
        background: #2a2a3b !important;
        box-shadow: 0 0 0 0.25rem rgba(34, 211, 238, 0.25) !important;
        border-color: #22d3ee !important;
        color: #ffffff !important;
    }

    .form-floating > .form-control {
        background-color: #2a2a3b !important;
        color: #ffffff !important;
    }

    .form-floating > .form-control:focus ~ label,
    .form-floating > .form-control:not(:placeholder-shown) ~ label {
        color: #22d3ee !important;
        background-color: #2a2a3b !important;
        padding: 0 0.5rem;
        opacity: 1;
    }

    .form-floating > label {
        color: rgba(244, 244, 245, 0.9) !important;
        background-color: transparent !important;
    }

    textarea.custom-input {
        min-height: 150px !important;
    }

    .social-link {
        transition: all 0.3s ease;
    }

    .social-link:hover {
        color: #0ea5e9 !important;
        transform: translateY(-2px);
    }

    .contact-info {
        color: #f4f4f5;
    }

    .contact-icon {
        background: rgba(34, 211, 238, 0.1) !important;
    }

    .contact-icon i {
        color: #22d3ee !important;
    }

    .hover-text-primary:hover {
        color: #22d3ee !important;
    }

    .text-secondary {
        color: #f4f4f5 !important;
    }

    .btn:hover {
        background-color: rgba(34, 211, 238, 0.1) !important;
        box-shadow: 0 0 20px rgba(34, 211, 238, 0.3);
        transform: translateY(-2px);
    }

    .contact-input {
        background-color: #1e1e2e !important;
        color: white !important;
        border: 2px solid rgba(244, 244, 245, 0.4) !important;
        padding: 12px !important;
        font-size: 16px !important;
        transition: all 0.3s ease !important;
    }

    .contact-input:focus {
        background-color: #1e1e2e !important;
        color: white !important;
        border-color: #22d3ee !important;
        box-shadow: 0 0 0 0.25rem rgba(34, 211, 238, 0.25) !important;
        outline: none !important;
    }

    .contact-input.is-invalid {
        border-color: rgba(244, 244, 245, 0.4) !important;
        background-image: none !important;
    }

    .contact-input.is-invalid:focus {
        border-color: #22d3ee !important;
        box-shadow: 0 0 0 0.25rem rgba(34, 211, 238, 0.25) !important;
    }

    .field-validation-valid {
        display: none;
    }

    textarea.contact-input {
        resize: vertical;
    }

    .form-label {
        font-weight: 500;
        margin-bottom: 0.5rem;
    }

    .btn-primary:hover {
        background: #0ea5e9 !important;
        transform: translateY(-1px);
        box-shadow: 0 4px 12px rgba(34, 211, 238, 0.25);
    }
</style>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 