@model AnastasiiaPortfolio.Models.ContactViewModel

@{
    ViewData["Title"] = "Contact";
}

<div class="container py-5">
    <div class="row mb-5">
        <div class="col-lg-8 mx-auto text-center">
            <h1 class="display-4 fw-bold mb-3">Get in Touch</h1>
            <p class="lead">I'd love to hear from you. Let's discuss your project or just say hello!</p>
        </div>
    </div>

    <div class="row">
        <!-- Contact Information -->
        <div class="col-lg-4 mb-4 mb-lg-0">
            <div class="card h-100" style="background: #2a2a3b; border: 1px solid rgba(244, 244, 245, 0.1);">
                <div class="card-body">
                    <h3 class="h5 mb-4" style="color: #f4f4f5;">Contact Information</h3>
                    <partial name="_ContactInfoPartial" />
                </div>
            </div>
        </div>

        <!-- Contact Form -->
        <div class="col-lg-8">
            <div class="card" style="background: #2a2a3b; border: 1px solid rgba(244, 244, 245, 0.1);">
                <div class="card-body">
                    <h3 class="h5 mb-4" style="color: #f4f4f5;">Send a Message</h3>
                    <form asp-action="Contact" method="post">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="text" class="form-control custom-input" id="name" name="name" placeholder="Your Name" required>
                                    <label for="name" style="color: #f4f4f5;">Your Name</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="email" class="form-control custom-input" id="email" name="email" placeholder="Your Email" required>
                                    <label for="email" style="color: #f4f4f5;">Your Email</label>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-floating">
                                    <input type="text" class="form-control custom-input" id="subject" name="subject" placeholder="Subject" required>
                                    <label for="subject" style="color: #f4f4f5;">Subject</label>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-floating">
                                    <textarea class="form-control custom-input" id="message" name="message" placeholder="Your Message" style="height: 150px" required></textarea>
                                    <label for="message" style="color: #f4f4f5;">Your Message</label>
                                </div>
                            </div>
                            <div class="col-12">
                                <button type="submit" class="btn" style="background: #1a1a1a; color: #f4f4f5; border: 1px solid #22d3ee;">
                                    <i class="fas fa-paper-plane me-2"></i>Send Message
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Social Links -->
    <div class="row mt-5">
        <div class="col-12 text-center">
            <h3 class="h5 mb-4" style="color: #f4f4f5;">Connect With Me</h3>
            <div class="d-flex justify-content-center gap-4">
                <a href="https://www.linkedin.com/in/anastasiia-khrustalova/" class="social-link" style="color: #22d3ee;">
                    <i class="fab fa-linkedin fa-2x"></i>
                </a>
                <a href="https://github.com/AnastasiiaKhr" class="social-link" style="color: #22d3ee;">
                    <i class="fab fa-github fa-2x"></i>
                </a>
            </div>
        </div>
    </div>
</div>

<style>
    body {
        background: #1e1e2e;
        color: #f4f4f5;
    }

    .card {
        border: none;
        box-shadow: 0 0 30px rgba(0, 0, 0, 0.2);
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

    .card:hover {
        transform: translateY(-2px);
        box-shadow: 0 0 40px rgba(34, 211, 238, 0.1);
    }

    .custom-input {
        background: #1e1e2e !important;
        border: 1px solid rgba(244, 244, 245, 0.1) !important;
        color: #f4f4f5 !important;
    }

    .custom-input:focus {
        box-shadow: 0 0 0 0.2rem rgba(34, 211, 238, 0.2) !important;
        border-color: #22d3ee !important;
    }

    .custom-input::placeholder {
        color: rgba(244, 244, 245, 0.5) !important;
    }

    .social-link {
        transition: all 0.3s ease;
    }

    .social-link:hover {
        color: #0ea5e9 !important;
        transform: translateY(-2px);
    }

    .contact-info {
        color: #f4f4f5;
    }

    .contact-icon {
        background: rgba(34, 211, 238, 0.1) !important;
    }

    .contact-icon i {
        color: #22d3ee !important;
    }

    .hover-text-primary:hover {
        color: #22d3ee !important;
    }

    .text-secondary {
        color: #f4f4f5 !important;
    }

    .btn:hover {
        background-color: rgba(34, 211, 238, 0.1) !important;
        box-shadow: 0 0 20px rgba(34, 211, 238, 0.3);
        transform: translateY(-2px);
    }
</style>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 