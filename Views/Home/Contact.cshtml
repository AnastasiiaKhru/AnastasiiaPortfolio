@model AnastasiiaPortfolio.Models.HomeViewModel

@{
    ViewData["Title"] = "Contact";
}

<div class="container contact-page py-3 py-md-4">
    <div class="row mb-3 mb-md-4">
        <div class="col-lg-8 mx-auto text-center">
            <h1 class="display-5 fw-bold mb-2">Get in Touch</h1>
            <p class="lead mb-0" style="font-size: 1rem;">I'd love to hear from you. Let's discuss your project or just say hello!</p>
        </div>
    </div>

    <div class="row">
        <!-- Contact Information -->
        <div class="col-lg-4 mb-3 mb-lg-0">
            <div class="card h-100 contact-card" style="background: #2a2a3b; border: 1px solid rgba(244, 244, 245, 0.1);">
                <div class="card-body p-3 p-md-4">
                    <h3 class="h5 mb-3" style="color: #f4f4f5;">Contact Information</h3>
                    <partial name="_ContactInfoPartial" />
                </div>
            </div>
        </div>

        <!-- Contact Form -->
        <div class="col-lg-8">
            <div class="card contact-form-card" style="background: #2a2a3b; border: 1px solid rgba(244, 244, 245, 0.1);">
                <div class="card-body p-3 p-md-4">
                    <h3 class="h5 mb-3" style="color: #f4f4f5;">Send a Message</h3>
                    
                    <div id="contactThankYou" class="alert alert-success contact-thank-you" role="alert" style="display: none;">
                        Thank you! Your email client has opened with a draft to nastiakhru@gmail.com. Please click <strong>Send</strong> there to deliver your message.
                    </div>
                    <div id="contactError" class="alert alert-danger" role="alert" style="display: none;"></div>
                    
                    <form id="contactForm" action="#" method="get">
                        <div class="row g-2 g-md-3">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="name" class="form-label text-light">Your Name</label>
                                    <input type="text" class="form-control contact-input" id="name" name="name" required 
                                           placeholder="Your name"
                                           style="background: #1e1e2e; color: white; border: 2px solid rgba(244, 244, 245, 0.4);">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="email" class="form-label text-light">Your Email</label>
                                    <input type="email" class="form-control contact-input" id="email" name="email" required
                                           placeholder="your@email.com"
                                           style="background: #1e1e2e; color: white; border: 2px solid rgba(244, 244, 245, 0.4);">
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-group">
                                    <label for="message" class="form-label text-light">Your Message</label>
                                    <textarea class="form-control contact-input contact-message" 
                                              id="message" 
                                              name="message" 
                                              rows="3" 
                                              required
                                              placeholder="Your message..."
                                              style="background: #1e1e2e !important; 
                                                     color: white !important; 
                                                     border: 2px solid rgba(244, 244, 245, 0.4) !important;
                                                     min-height: 80px !important;"></textarea>
                                </div>
                            </div>
                            <div class="col-12 mt-1">
                                <button type="submit" class="btn btn-primary w-100" 
                                        style="background: #64748b; border: none; padding: 10px 12px;">
                                    Send Message
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Social Links -->
    <div class="row mt-4">
        <div class="col-12 text-center">
            <h3 class="h5 mb-3" style="color: #f4f4f5;">Connect With Me</h3>
            <div class="d-flex justify-content-center gap-4">
                <a href="https://www.linkedin.com/in/anastasiia-khrustaleva-29a180100/" class="social-link" style="color: #94a3b8;">
                    <i class="fab fa-linkedin fa-2x"></i>
                </a>
                <a href="https://github.com/AnastasiiaKhru" class="social-link" style="color: #94a3b8;">
                    <i class="fab fa-github fa-2x"></i>
                </a>
            </div>
        </div>
    </div>
</div>

<style>
    body {
        background: #1e1e2e;
        color: #f4f4f5;
    }

    .card {
        border: none;
        box-shadow: 0 0 30px rgba(0, 0, 0, 0.2);
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

    .card:hover {
        transform: translateY(-2px);
        box-shadow: 0 0 40px rgba(100, 116, 139, 0.15);
    }

    .custom-input {
        background: #2a2a3b !important;
        border: 2px solid rgba(244, 244, 245, 0.4) !important;
        color: #ffffff !important;
        font-size: 1rem !important;
    }

    .custom-input:focus {
        background: #2a2a3b !important;
        box-shadow: 0 0 0 0.25rem rgba(100, 116, 139, 0.25) !important;
        border-color: #94a3b8 !important;
        color: #ffffff !important;
    }

    .form-floating > .form-control {
        background-color: #2a2a3b !important;
        color: #ffffff !important;
    }

    .form-floating > .form-control:focus ~ label,
    .form-floating > .form-control:not(:placeholder-shown) ~ label {
        color: #94a3b8 !important;
        background-color: #2a2a3b !important;
        padding: 0 0.5rem;
        opacity: 1;
    }

    .form-floating > label {
        color: rgba(244, 244, 245, 0.9) !important;
        background-color: transparent !important;
    }

    textarea.custom-input {
        min-height: 150px !important;
    }

    .social-link {
        transition: all 0.3s ease;
    }

    .social-link:hover {
        color: #cbd5e1 !important;
        transform: translateY(-2px);
    }

    .contact-info {
        color: #f4f4f5;
    }

    .contact-icon {
        background: rgba(100, 116, 139, 0.2) !important;
    }

    .contact-icon i {
        color: #94a3b8 !important;
    }

    .hover-text-primary:hover {
        color: #94a3b8 !important;
    }

    .text-secondary {
        color: #f4f4f5 !important;
    }

    .btn:hover {
        background-color: rgba(100, 116, 139, 0.2) !important;
        box-shadow: 0 0 20px rgba(100, 116, 139, 0.25);
        transform: translateY(-2px);
    }

    .contact-input {
        background-color: #1e1e2e !important;
        color: white !important;
        border: 2px solid rgba(244, 244, 245, 0.4) !important;
        padding: 12px !important;
        font-size: 16px !important;
        transition: all 0.3s ease !important;
    }

    .contact-input:focus {
        background-color: #1e1e2e !important;
        color: white !important;
        border-color: #94a3b8 !important;
        box-shadow: 0 0 0 0.25rem rgba(100, 116, 139, 0.25) !important;
        outline: none !important;
    }

    .contact-input.is-invalid {
        border-color: rgba(244, 244, 245, 0.4) !important;
        background-image: none !important;
    }

    .contact-input.is-invalid:focus {
        border-color: #94a3b8 !important;
        box-shadow: 0 0 0 0.25rem rgba(100, 116, 139, 0.25) !important;
    }

    .field-validation-valid {
        display: none;
    }

    textarea.contact-input.contact-message {
        resize: vertical;
        max-height: 200px;
    }

    .form-label {
        font-weight: 500;
        margin-bottom: 0.5rem;
    }

    .btn-primary:hover {
        background: #475569 !important;
        transform: translateY(-1px);
        box-shadow: 0 4px 12px rgba(100, 116, 139, 0.25);
    }

    .contact-thank-you {
        background: rgba(34, 197, 94, 0.15) !important;
        border: 1px solid rgba(34, 197, 94, 0.5);
        color: #86efac !important;
    }

    .contact-validation-summary {
        background: rgba(239, 68, 68, 0.15) !important;
        border: 1px solid rgba(239, 68, 68, 0.5);
        color: #fca5a5 !important;
    }

    .validation-summary-valid { display: none !important; }
</style>

@section Scripts {
    <script>
        (function () {
            var form = document.getElementById('contactForm');
            var thankYou = document.getElementById('contactThankYou');
            var errEl = document.getElementById('contactError');
            var toEmail = 'nastiakhru@gmail.com';

            if (!form) return;

            form.addEventListener('submit', function (e) {
                e.preventDefault();
                if (thankYou) thankYou.style.display = 'none';
                if (errEl) { errEl.style.display = 'none'; errEl.textContent = ''; }

                var name = (document.getElementById('name') || {}).value.trim();
                var email = (document.getElementById('email') || {}).value.trim();
                var message = (document.getElementById('message') || {}).value.trim();

                if (!name || !email || !message) {
                    if (errEl) {
                        errEl.textContent = 'Please fill in your name, email, and message.';
                        errEl.style.display = 'block';
                    }
                    return;
                }

                var subject = 'Portfolio Contact from ' + name;
                var body = 'Name: ' + name + '\nEmail: ' + email + '\n\nMessage:\n' + message;
                var mailto = 'mailto:' + toEmail + '?subject=' + encodeURIComponent(subject) + '&body=' + encodeURIComponent(body);
                window.location.href = mailto;

                if (thankYou) {
                    thankYou.style.display = 'block';
                    thankYou.scrollIntoView({ behavior: 'smooth', block: 'nearest' });
                }
            });
        })();
    </script>
} 