@model AnastasiiaPortfolio.Models.HomeViewModel

@{
    ViewData["Title"] = "Contact";
}

@section Styles {
    <style>
        .contact-page {
            padding-top: 2rem;
            padding-bottom: 4rem;
        }

        .contact-header {
            text-align: center;
            margin-bottom: 3rem;
        }

        .contact-header h1 {
            font-size: clamp(2rem, 5vw, 3rem);
            font-weight: 800;
            background: linear-gradient(135deg, #1e293b 0%, #475569 50%, #64748b 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            margin-bottom: 1rem;
        }

        .contact-header p {
            color: #64748b;
            font-size: 1.1rem;
            max-width: 500px;
            margin: 0 auto;
        }

        .contact-grid {
            display: grid;
            grid-template-columns: 1fr 1.5fr;
            gap: 2rem;
            max-width: 1000px;
            margin: 0 auto;
        }

        @@media (max-width: 768px) {
            .contact-grid {
                grid-template-columns: 1fr;
            }
        }

        /* Contact Info Card */
        .contact-info-card {
            background: linear-gradient(135deg, rgba(255, 255, 255, 0.95), rgba(255, 255, 255, 0.85));
            backdrop-filter: blur(20px);
            border-radius: 1.5rem;
            padding: 2rem;
            border: 1px solid rgba(255, 255, 255, 0.8);
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.08);
            height: fit-content;
        }

        .contact-info-card h3 {
            font-size: 1.25rem;
            font-weight: 700;
            color: #1e293b;
            margin-bottom: 1.5rem;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .contact-info-card h3::before {
            content: '';
            width: 4px;
            height: 24px;
            background: linear-gradient(180deg, #8b5cf6, #ec4899);
            border-radius: 2px;
        }

        .contact-item {
            display: flex;
            align-items: flex-start;
            gap: 1rem;
            padding: 1rem 0;
            border-bottom: 1px solid rgba(0, 0, 0, 0.06);
        }

        .contact-item:last-child {
            border-bottom: none;
        }

        .contact-item-icon {
            width: 48px;
            height: 48px;
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.2rem;
            flex-shrink: 0;
        }

        .contact-item-icon.email {
            background: linear-gradient(135deg, rgba(139, 92, 246, 0.15), rgba(139, 92, 246, 0.05));
            color: #8b5cf6;
        }

        .contact-item-icon.location {
            background: linear-gradient(135deg, rgba(14, 165, 233, 0.15), rgba(14, 165, 233, 0.05));
            color: #0ea5e9;
        }

        .contact-item-icon.phone {
            background: linear-gradient(135deg, rgba(236, 72, 153, 0.15), rgba(236, 72, 153, 0.05));
            color: #ec4899;
        }

        .contact-item-content {
            flex: 1;
        }

        .contact-item-label {
            font-size: 0.8rem;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.05em;
            color: #64748b;
            margin-bottom: 0.25rem;
        }

        .contact-item-value {
            font-size: 1rem;
            font-weight: 500;
            color: #1e293b;
        }

        .contact-item-value a {
            color: #1e293b;
            text-decoration: none;
            transition: color 0.2s;
        }

        .contact-item-value a:hover {
            color: #8b5cf6;
        }

        /* Contact Form Card */
        .contact-form-card {
            background: linear-gradient(135deg, rgba(255, 255, 255, 0.95), rgba(255, 255, 255, 0.85));
            backdrop-filter: blur(20px);
            border-radius: 1.5rem;
            padding: 2rem;
            border: 1px solid rgba(255, 255, 255, 0.8);
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.08);
        }

        .contact-form-card h3 {
            font-size: 1.25rem;
            font-weight: 700;
            color: #1e293b;
            margin-bottom: 1.5rem;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .contact-form-card h3::before {
            content: '';
            width: 4px;
            height: 24px;
            background: linear-gradient(180deg, #0ea5e9, #8b5cf6);
            border-radius: 2px;
        }

        .form-row {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 1rem;
            margin-bottom: 1rem;
        }

        @@media (max-width: 500px) {
            .form-row {
                grid-template-columns: 1fr;
            }
        }

        .form-group {
            margin-bottom: 1rem;
        }

        .form-group label {
            display: block;
            font-size: 0.85rem;
            font-weight: 600;
            color: #475569;
            margin-bottom: 0.5rem;
        }

        .form-group input,
        .form-group textarea {
            width: 100%;
            padding: 0.875rem 1rem;
            border: 2px solid #e2e8f0;
            border-radius: 0.75rem;
            font-size: 1rem;
            color: #1e293b;
            background: rgba(255, 255, 255, 0.8);
            transition: all 0.2s;
        }

        .form-group input:focus,
        .form-group textarea:focus {
            outline: none;
            border-color: #8b5cf6;
            box-shadow: 0 0 0 4px rgba(139, 92, 246, 0.1);
            background: white;
        }

        .form-group input::placeholder,
        .form-group textarea::placeholder {
            color: #94a3b8;
        }

        .form-group textarea {
            min-height: 120px;
            resize: vertical;
        }

        .btn-send {
            width: 100%;
            padding: 1rem 2rem;
            border: none;
            border-radius: 0.75rem;
            font-size: 1rem;
            font-weight: 600;
            color: white;
            background: linear-gradient(135deg, #8b5cf6, #6366f1);
            cursor: pointer;
            transition: all 0.3s;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 0.5rem;
        }

        .btn-send:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(139, 92, 246, 0.35);
        }

        .btn-send:active {
            transform: translateY(0);
        }

        /* Success/Error Messages */
        .alert-success {
            background: rgba(34, 197, 94, 0.1);
            border: 1px solid rgba(34, 197, 94, 0.3);
            color: #15803d;
            padding: 1rem;
            border-radius: 0.75rem;
            margin-bottom: 1rem;
        }

        .alert-danger {
            background: rgba(239, 68, 68, 0.1);
            border: 1px solid rgba(239, 68, 68, 0.3);
            color: #dc2626;
            padding: 1rem;
            border-radius: 0.75rem;
            margin-bottom: 1rem;
        }

        /* Social Section */
        .social-section {
            text-align: center;
            margin-top: 3rem;
            padding-top: 2rem;
        }

        .social-section h3 {
            font-size: 1.25rem;
            font-weight: 700;
            color: #1e293b;
            margin-bottom: 1.5rem;
        }

        .social-buttons {
            display: flex;
            justify-content: center;
            gap: 1rem;
            flex-wrap: wrap;
        }

        .social-btn {
            display: flex;
            align-items: center;
            gap: 0.75rem;
            padding: 1rem 2rem;
            border-radius: 1rem;
            text-decoration: none;
            font-weight: 600;
            font-size: 0.95rem;
            transition: all 0.3s;
            min-width: 200px;
            justify-content: center;
        }

        .social-btn i {
            font-size: 1.25rem;
        }

        .social-btn.linkedin {
            background: linear-gradient(135deg, rgba(10, 102, 194, 0.1), rgba(10, 102, 194, 0.05));
            color: #0a66c2;
            border: 2px solid rgba(10, 102, 194, 0.2);
        }

        .social-btn.linkedin:hover {
            background: #0a66c2;
            color: white;
            border-color: #0a66c2;
            transform: translateY(-3px);
            box-shadow: 0 8px 25px rgba(10, 102, 194, 0.3);
        }

        .social-btn.github {
            background: linear-gradient(135deg, rgba(36, 41, 46, 0.1), rgba(36, 41, 46, 0.05));
            color: #24292e;
            border: 2px solid rgba(36, 41, 46, 0.2);
        }

        .social-btn.github:hover {
            background: #24292e;
            color: white;
            border-color: #24292e;
            transform: translateY(-3px);
            box-shadow: 0 8px 25px rgba(36, 41, 46, 0.3);
        }

        /* Availability Badge */
        .availability-badge {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            padding: 0.5rem 1rem;
            background: rgba(34, 197, 94, 0.1);
            border: 1px solid rgba(34, 197, 94, 0.3);
            border-radius: 2rem;
            color: #15803d;
            font-size: 0.85rem;
            font-weight: 600;
            margin-top: 1.5rem;
        }

        .availability-badge::before {
            content: '';
            width: 8px;
            height: 8px;
            background: #22c55e;
            border-radius: 50%;
            animation: pulse 2s infinite;
        }

        @@keyframes pulse {
            0%, 100% { opacity: 1; transform: scale(1); }
            50% { opacity: 0.5; transform: scale(1.2); }
        }
    </style>
}

<div class="container contact-page">
    <!-- Header -->
    <div class="contact-header">
        <h1>Get in Touch</h1>
        <p>I'd love to hear from you. Let's discuss your project or just say hello!</p>
    </div>

    <!-- Contact Grid -->
    <div class="contact-grid">
        <!-- Contact Information -->
        <div class="contact-info-card">
            <h3>Contact Information</h3>
            
            <div class="contact-item">
                <div class="contact-item-icon email">
                    <i class="fas fa-envelope"></i>
                </div>
                <div class="contact-item-content">
                    <div class="contact-item-label">Email</div>
                    <div class="contact-item-value">
                        <a href="mailto:anastasiiakhrustaleva@gmail.com">anastasiiakhrustaleva@gmail.com</a>
                    </div>
                </div>
            </div>

            <div class="contact-item">
                <div class="contact-item-icon location">
                    <i class="fas fa-map-marker-alt"></i>
                </div>
                <div class="contact-item-content">
                    <div class="contact-item-label">Location</div>
                    <div class="contact-item-value">Niagara Region, Canada</div>
                </div>
            </div>

            <div class="contact-item">
                <div class="contact-item-icon phone">
                    <i class="fas fa-phone"></i>
                </div>
                <div class="contact-item-content">
                    <div class="contact-item-label">Phone</div>
                    <div class="contact-item-value">
                        <a href="tel:+19053241507">(905) 324-1507</a>
                    </div>
                </div>
            </div>

            <div class="availability-badge">
                Available for new projects
            </div>
        </div>

        <!-- Contact Form -->
        <div class="contact-form-card">
            <h3>Send a Message</h3>
            
            <div id="contactThankYou" class="alert-success" role="alert" style="display: none;">
                <i class="fas fa-check-circle"></i> Thank you! Your email client has opened. Please click <strong>Send</strong> to deliver your message.
            </div>
            <div id="contactError" class="alert-danger" role="alert" style="display: none;"></div>
            
            <form id="contactForm" action="#" method="get">
                <div class="form-row">
                    <div class="form-group">
                        <label for="name">Your Name</label>
                        <input type="text" id="name" name="name" required placeholder="John Doe">
                    </div>
                    <div class="form-group">
                        <label for="email">Your Email</label>
                        <input type="email" id="email" name="email" required placeholder="john@example.com">
                    </div>
                </div>
                <div class="form-group">
                    <label for="subject">Subject</label>
                    <input type="text" id="subject" name="subject" placeholder="Project Inquiry">
                </div>
                <div class="form-group">
                    <label for="message">Your Message</label>
                    <textarea id="message" name="message" required placeholder="Tell me about your project..."></textarea>
                </div>
                <button type="submit" class="btn-send">
                    <i class="fas fa-paper-plane"></i> Send Message
                </button>
            </form>
        </div>
    </div>

    <!-- Social Links -->
    <div class="social-section">
        <h3>Connect With Me</h3>
        <div class="social-buttons">
            <a href="https://www.linkedin.com/in/anastasiia-khrustaleva-29a180100/" target="_blank" rel="noopener" class="social-btn linkedin">
                <i class="fab fa-linkedin"></i> LinkedIn
            </a>
            <a href="https://github.com/AnastasiiaKhru" target="_blank" rel="noopener" class="social-btn github">
                <i class="fab fa-github"></i> GitHub
            </a>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        (function () {
            var form = document.getElementById('contactForm');
            var thankYou = document.getElementById('contactThankYou');
            var errEl = document.getElementById('contactError');
            var toEmail = 'anastasiiakhrustaleva@gmail.com';

            if (!form) return;

            form.addEventListener('submit', function (e) {
                e.preventDefault();
                if (thankYou) thankYou.style.display = 'none';
                if (errEl) { errEl.style.display = 'none'; errEl.textContent = ''; }

                var name = (document.getElementById('name') || {}).value.trim();
                var email = (document.getElementById('email') || {}).value.trim();
                var subject = (document.getElementById('subject') || {}).value.trim() || 'Portfolio Contact';
                var message = (document.getElementById('message') || {}).value.trim();

                if (!name || !email || !message) {
                    if (errEl) {
                        errEl.innerHTML = '<i class="fas fa-exclamation-circle"></i> Please fill in your name, email, and message.';
                        errEl.style.display = 'block';
                    }
                    return;
                }

                var fullSubject = subject + ' from ' + name;
                var body = 'Name: ' + name + '\nEmail: ' + email + '\n\nMessage:\n' + message;
                var mailto = 'mailto:' + toEmail + '?subject=' + encodeURIComponent(fullSubject) + '&body=' + encodeURIComponent(body);
                window.location.href = mailto;

                if (thankYou) {
                    thankYou.style.display = 'block';
                    thankYou.scrollIntoView({ behavior: 'smooth', block: 'nearest' });
                }
            });
        })();
    </script>
}
